<header class="sticky top-0 z-50 bg-[#1F1F1F] shadow-md">
    <%- include('../../views/partials/user/header')%>
</header>
    <script src="https://cdn.tailwindcss.com"></script>

    <body class="bg-[#1F1F1F] text-white">
        <div class="flex flex-col md:flex-row min-h-screen p-4 md:p-0">
            <!-- Sidebar -->
            <div class="w-full md:w-64 bg-[#1F1F1F] p-6 md:sticky md:top-16 md:h-[calc(100vh-4rem)]">
                <h2 class="text-xl font-bold mb-6 text-[#88903F] border-b border-[#333] pb-4">SETTINGS</h2>
                <ul class="space-y-3">
                    <li>
                        <a href="/profile" class="flex items-center p-2 rounded-lg hover:bg-[#333] transition-colors bg-[#333] text-[#88903F]">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            Personal Info
                        </a>
                    </li>
                    <li>
                        <a href="/orders" class="flex items-center p-2 rounded-lg hover:bg-[#333] transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                            </svg>
                            Orders
                        </a>
                    </li>
                    <li>
                        <a href="/address" class="flex items-center p-2 rounded-lg ">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            Address
                        </a>
                    </li>
                    <li>
                        <a href="/wallet" class="flex items-center p-2 rounded-lg hover:bg-[#333] transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                            </svg>
                            Wallet
                        </a>
                    </li>
                </ul>
                
                <div class="mt-10 border-t border-[#333] pt-6">
                    <% if (!userDatas || Object.keys(userDatas).length===0) { %>
                        <a href="/login" class="block w-full bg-[#88903F] hover:bg-[#a0a84f] text-white py-2 px-4 rounded-lg text-center transition-colors">
                            Login
                        </a>
                    <% } else { %>
                        <a href="/logout" class="block w-full bg-[#333] hover:bg-[#444] text-white py-2 px-4 rounded-lg text-center transition-colors">
                            Logout
                        </a>
                    <% } %>
                </div>
            </div>

            <!-- Main Content -->
            <div class="flex-1 flex justify-center p-4 md:p-10">
                <div class="w-full max-w-3xl bg-[#1F1F1F] p-6 rounded-lg border border-gray-700">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-xl font-bold">BASIC INFO</h2>
                        <span class="text-gray-400 hover:text-white cursor-pointer"><a
                                href="/profile-edit">✏️Edit</a></span>
                    </div>

                    <form class="mt-6">
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <div class="sm:col-span-2 flex flex-col items-center">
                                <label class="block mb-2">Image</label>
                                <div id="imagePreview"
                                    class="relative w-32 h-32 bg-gray-700 rounded-full overflow-hidden">
                                    <% if (userDatas?.userImage||'') { %>
                                        <img src="<%= userDatas?.userImage ||'' %>"
                                            class="w-full h-full object-cover rounded">
                                        <% } else { %>
                                            <span></span>
                                            <% } %>
                                </div>
                            </div>

                            <div>
                                <label class="block mb-2">Username</label>
                                <input type="text"
                                    class="w-full p-2 bg-gray-700 border border-gray-600 rounded focus:ring-2 focus:ring-yellow-400 text-white"
                                    value="<%= userDatas?.firstname || '' %>" readonly>
                            </div>
                            <div>
                                <label class="block mb-2">Phone</label>
                                <input type="text"
                                    class="w-full p-2 bg-gray-700 border border-gray-600 rounded focus:ring-2 focus:ring-yellow-400"
                                    value="<%= userDatas?.phNumber || '' %>" readonly>
                            </div>
                            <div>
                                <label class="block mb-2">Email</label>
                                <input type="email"
                                    class="w-full p-2 bg-gray-700 border border-gray-600 rounded focus:ring-2 focus:ring-yellow-400"
                                    value="<%= userDatas?.email || '' %>" readonly>
                            </div>
                            <div>
                                <label class="block mb-2">Gender</label>
                                <input type="text"
                                    class="w-full p-2 bg-gray-700 border border-gray-600 rounded focus:ring-2 focus:ring-yellow-400"
                                    value="<%= userDatas?.gender || '' %>" readonly>
                            </div>
                        </div>
                    </form>
                    <% if (!userDatas || Object.keys(userDatas).length===0) { %>
                        <p class="text-center text-sm mt-20">
                            Have an account? <a href="/login" class="text-yellow-400 hover:underline">Sign In</a>
                        </p>
                        <% } %>
                </div>
            </div>
        </div>
    </body>

    <%- include('../../views/partials/user/footer')%>