<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
        <link rel="icon" href="/images/hand-watch - Copy.png" type="image/png">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        #mobile-menu-toggle.active .hamburger { display: none; }
        #mobile-menu-toggle.active .close { display: block; }
        #mobile-menu-toggle .close { display: none; }
    </style>
    <script>
        // This ensures the menu toggle works immediately
        window.addEventListener('load', function() {
            var mobileMenuToggle = document.getElementById('mobile-menu-toggle');
            var mobileMenu = document.getElementById('mobile-menu');
            
            if (mobileMenuToggle && mobileMenu) {
                mobileMenuToggle.addEventListener('click', function() {
                    mobileMenu.classList.toggle('hidden');
                    this.classList.toggle('active');
                });
            }
        });
    </script>
</head>
<body class="bg-[#1F1F1F] text-white">
    <header class="sticky top-0 z-50 bg-[#1F1F1F] shadow-md">
        <%- include('../../views/partials/user/header')%>
    </header>
        <div class="flex flex-col md:flex-row min-h-screen p-2 sm:p-4 md:p-0">
            
            <div class="w-full md:w-64 bg-[#1F1F1F] p-4 sm:p-6 md:sticky md:top-16 md:h-[calc(100vh-4rem)]">
                <div class="border-b border-[#333] pb-4 mb-6">
                    <h2 class="text-lg sm:text-xl font-bold text-[#88903F]">SETTINGS</h2>
                </div>
                <ul id="mobile-menu" class="space-y-3 md:block">
                    <li>
                        <a href="/profile" class="flex items-center p-2 rounded-lg hover:bg-[#333] transition-colors bg-[#333] text-[#88903F]">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            Personal Info
                        </a>
                    </li>
                    <li>
                        <a href="/orders" class="flex items-center p-2 rounded-lg hover:bg-[#333] transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                            </svg>
                            Orders
                        </a>
                    </li>
                    <li>
                        <a href="/address" class="flex items-center p-2 rounded-lg ">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            Address
                        </a>
                    </li>
                    <li>
                        <a href="/wallet" class="flex items-center p-2 rounded-lg hover:bg-[#333] transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                            </svg>
                            Wallet
                        </a>
                    </li>
                    <li>
                        <a href="/referrals" class="flex items-center p-2 rounded-lg hover:bg-[#333] transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                            </svg>
                            Referrals
                        </a>
                    </li>
                </ul>
                
                <div class="mt-10 border-t border-[#333] pt-6">
                    <% if (!userDatas || Object.keys(userDatas).length===0) { %>
                        <a href="/login" class="block w-full bg-[#88903F] hover:bg-[#a0a84f] text-white py-2 px-4 rounded-lg text-center transition-colors">
                            Login
                        </a>
                    <% } else { %>
                        <a href="/logout" class="block w-full bg-[#333] hover:bg-[#444] text-white py-2 px-4 rounded-lg text-center transition-colors">
                            Logout
                        </a>
                    <% } %>
                </div>
            </div>

            
            <div class="flex-1 flex justify-center p-3 sm:p-4 md:p-10">
                <div class="w-full max-w-3xl bg-[#1F1F1F] p-4 sm:p-6 rounded-lg border border-gray-700">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-lg sm:text-xl font-bold">BASIC INFO</h2>
                        <a href="/profile-edit" class="text-gray-400 hover:text-white cursor-pointer flex items-center">
                            <span class="mr-1">✏️</span>
                            <span>Edit</span>
                        </a>
                    </div>

                    <form class="mt-4 sm:mt-6">
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4">
                            <div class="sm:col-span-2 flex flex-col items-center mb-2 sm:mb-4">
                                <label class="block mb-2">Image</label>
                                <div id="imagePreview"
                                    class="relative w-24 h-24 sm:w-32 sm:h-32 bg-gray-700 rounded-full overflow-hidden border-2 border-gray-700">
                                    <% if (userDatas?.userImage||'') { %>
                                        <img src="<%= userDatas?.userImage ||'' %>"
                                            class="w-full h-full object-cover">
                                    <% } else { %>
                                        <div class="w-full h-full flex items-center justify-center text-gray-500">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                        </div>
                                    <% } %>
                                </div>
                            </div>

                            <div>
                                <label class="block mb-2">Username</label>
                                <input type="text"
                                    class="w-full p-2 bg-gray-700 border border-gray-600 rounded focus:ring-2 focus:ring-yellow-400 text-white"
                                    value="<%= userDatas?.firstname || '' %>" readonly>
                            </div>
                            <div>
                                <label class="block mb-2">Phone</label>
                                <input type="text"
                                    class="w-full p-2 bg-gray-700 border border-gray-600 rounded focus:ring-2 focus:ring-yellow-400"
                                    value="<%= userDatas?.phNumber || '' %>" readonly>
                            </div>
                            <div>
                                <label class="block mb-2">Email</label>
                                <input type="email"
                                    class="w-full p-2 bg-gray-700 border border-gray-600 rounded focus:ring-2 focus:ring-yellow-400"
                                    value="<%= userDatas?.email || '' %>" readonly>
                            </div>
                            <div>
                                <label class="block mb-2">Gender</label>
                                <input type="text"
                                    class="w-full p-2 bg-gray-700 border border-gray-600 rounded focus:ring-2 focus:ring-yellow-400"
                                    value="<%= userDatas?.gender || '' %>" readonly>
                            </div>
                        </div>
                    </form>
                    <% if (!userDatas || Object.keys(userDatas).length===0) { %>
                        <p class="text-center text-sm mt-20">
                            Have an account? <a href="/login" class="text-yellow-400 hover:underline">Sign In</a>
                        </p>
                        <% } %>
                </div>
            </div>
        </div>
    <script>
        // Immediate script execution for mobile menu toggle
        (function() {
            const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
            const mobileMenu = document.getElementById('mobile-menu');
            
            if (!mobileMenuToggle || !mobileMenu) return;
            
            // Initialize mobile menu state
            if (window.innerWidth < 768) {
                mobileMenu.classList.add('hidden');
            } else {
                mobileMenu.classList.remove('hidden');
            }
            
            // Set up toggle functionality immediately
            mobileMenuToggle.addEventListener('click', function() {
                mobileMenu.classList.toggle('hidden');
                this.classList.toggle('active');
                console.log('Menu toggled');
            });
            
            // Handle window resize
            window.addEventListener('resize', function() {
                if (window.innerWidth >= 768) {
                    mobileMenu.classList.remove('hidden');
                    mobileMenuToggle.classList.remove('active');
                }
            });
            
            // Close menu when clicking a menu item
            const menuLinks = mobileMenu.querySelectorAll('a');
            for (let i = 0; i < menuLinks.length; i++) {
                menuLinks[i].addEventListener('click', function() {
                    if (window.innerWidth < 768) {
                        mobileMenu.classList.add('hidden');
                        mobileMenuToggle.classList.remove('active');
                    }
                });
            }
        })();
    </script>

    <%- include('../../views/partials/user/footer')%>
</body>
</html>