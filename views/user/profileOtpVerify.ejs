                                <input type="text" maxlength="1"
                                    class="otp-input w-10 h-10 sm:w-12 sm:h-12 text-center border border-gray-300 rounded-lg  text-black focus:outline-none focus:ring-2 focus:ring-blue-500 text-xl">
                                <input type="text" maxlength="1"
                                    class="otp-input w-10 h-10 sm:w-12 sm:h-12 text-center border border-gray-300 rounded-lg  text-black focus:outline-none focus:ring-2 focus:ring-blue-500 text-xl">
                                <input type="text" maxlength="1"
                                    class="otp-input w-10 h-10 sm:w-12 sm:h-12 text-center border border-gray-300 rounded-lg  text-black focus:outline-none focus:ring-2 focus:ring-blue-500 text-xl">
                                <input type="text" maxlength="1"
                                    class="otp-input w-10 h-10 sm:w-12 sm:h-12 text-center border border-gray-300 rounded-lg  text-black focus:outline-none focus:ring-2 focus:ring-blue-500 text-xl">
