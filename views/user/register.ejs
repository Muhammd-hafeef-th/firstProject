<script>
    // Set the Google signup URL dynamically based on environment
    document.addEventListener('DOMContentLoaded', function() {
        const googleSignupLink = document.getElementById('googleSignupLink');
        if (googleSignupLink) {
            // Use the environment-specific base URL
            googleSignupLink.href = getFullUrl('/auth/google/signup');
            
            // Update referral code handler to use dynamic URLs
            const referralCodeInput = document.getElementById('referralCode');
            if (referralCodeInput) {
                referralCodeInput.addEventListener('input', function() {
                    const code = referralCodeInput.value.trim();
                    if (code) {
                        googleSignupLink.href = getFullUrl(`/auth/google/signup?referralCode=${encodeURIComponent(code)}`);
                    } else {
                        googleSignupLink.href = getFullUrl('/auth/google/signup');
                    }
                });
            }
        }
    });
</script>