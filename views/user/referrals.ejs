<head>
     <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LB | Lybros</title>
    <link rel="icon" href="/images/hand-watch - Copy.png" type="image/png"> 
</head>
<header class="sticky top-0 z-50 bg-[#1F1F1F] shadow-md">
    <%- include('../../views/partials/user/header')%>
</header>


<body class="bg-[#1F1F1F] text-white">
    <div class="flex flex-col md:flex-row min-h-screen p-4 md:p-0">
        <div class="w-full md:w-64 bg-[#1F1F1F] p-6 md:sticky md:top-16 md:h-[calc(100vh-4rem)]">
            <h2 class="text-xl font-bold mb-6 text-[#88903F] border-b border-[#333] pb-4">SETTINGS</h2>
            <ul class="space-y-3">
                <li>
                    <a href="/profile" class="flex items-center p-2 rounded-lg hover:bg-[#333] transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                        </svg>
                        Personal Info
                    </a>
                </li>
                <li>
                    <a href="/orders" class="flex items-center p-2 rounded-lg hover:bg-[#333] transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                        </svg>
                        Orders
                    </a>
                </li>
                <li>
                    <a href="/address" class="flex items-center p-2 rounded-lg ">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        Address
                    </a>
                </li>
                <li>
                    <a href="/wallet" class="flex items-center p-2 rounded-lg hover:bg-[#333] transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                        </svg>
                        Wallet
                    </a>
                </li>
                <li>
                    <a href="/referrals" class="flex items-center p-2 rounded-lg hover:bg-[#333] transition-colors bg-[#333] text-[#88903F]">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        Referrals
                    </a>
                </li>
            </ul>
            <div class="mt-10 border-t border-[#333] pt-6">
                <% if (!userDatas || Object.keys(userDatas).length===0) { %>
                    <a href="/login" class="block w-full bg-[#88903F] hover:bg-[#a0a84f] text-white py-2 px-4 rounded-lg text-center transition-colors">
                        Login
                    </a>
                <% } else { %>
                    <a href="/logout" class="block w-full bg-[#333] hover:bg-[#444] text-white py-2 px-4 rounded-lg text-center transition-colors">
                        Logout
                    </a>
                <% } %>
            </div>
        </div>

        <div class="flex-1 flex justify-center p-4 md:p-10">
            <div class="w-full max-w-3xl bg-[#1F1F1F] p-6 rounded-lg border border-gray-700">
                <h2 class="text-xl font-bold mb-4">YOUR REFERRAL PROGRAM</h2>
                
                <div class="mt-6 bg-gray-800 p-6 rounded-lg">
                    <h3 class="text-lg font-semibold text-[#88903F] mb-2">Your Referral Code</h3>
                    <div class="flex items-center justify-between p-3 bg-gray-700 rounded mb-4">
                        <span class="text-xl font-mono" id="referralCode"><%= referralCode %></span>
                        <button id="copyButton" class="bg-[#88903F] px-3 py-1 rounded hover:bg-yellow-600 transition">
                            Copy
                        </button>
                    </div>
                    
                    <div class="text-sm text-gray-400 mb-6">
                        <p>Share your referral code with friends. When they sign up:</p>
                        <ul class="list-disc ml-5 mt-2">
                            <li>You get ₹100 in your wallet</li>
                            <li>Your friend gets ₹50 in their wallet</li>
                        </ul>
                    </div>
                    
                    <div class="flex justify-between items-center mb-4">
                        <h3 class="text-lg font-semibold text-[#88903F]">Share Your Code</h3>
                    </div>
                    
                    <div class="flex space-x-3 mb-6">
                        <button class="bg-blue-600 p-2 rounded-full hover:bg-blue-700 transition" 
                                onclick="shareOnFacebook()">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M9.198 21.5h4v-8.01h3.604l.396-3.98h-4V7.5a1 1 0 0 1 1-1h3v-4h-3a5 5 0 0 0-5 5v2.01h-2l-.396 3.98h2.396v8.01Z" />
                            </svg>
                        </button>
                        <button class="bg-blue-400 p-2 rounded-full hover:bg-blue-500 transition" 
                                onclick="shareOnTwitter()">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0 0 22 5.92a8.19 8.19 0 0 1-2.357.646 4.118 4.118 0 0 0 1.804-2.27 8.224 8.224 0 0 1-2.605.996 4.107 4.107 0 0 0-6.993 3.743 11.65 11.65 0 0 1-8.457-4.287 4.106 4.106 0 0 0 1.27 5.477A4.072 4.072 0 0 1 2.8 9.713v.052a4.105 4.105 0 0 0 3.292 4.022 4.095 4.095 0 0 1-1.853.07 4.108 4.108 0 0 0 3.834 2.85A8.233 8.233 0 0 1 2 18.407a11.616 11.616 0 0 0 6.29 1.84" />
                            </svg>
                        </button>
                        <button class="bg-green-600 p-2 rounded-full hover:bg-green-700 transition" 
                                onclick="shareOnWhatsApp()">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 0 1-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 0 1-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 0 1 2.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0 0 12.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 0 0 5.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 0 0-3.48-8.413Z" />
                            </svg>
                        </button>
                    </div>
                </div>
                
                <div class="mt-8">
                    <h3 class="text-lg font-semibold text-[#88903F] mb-4">Your Referral Stats</h3>
                    <div class="bg-gray-800 p-4 rounded-lg flex justify-between mb-6">
                        <div class="text-center">
                            <p class="text-gray-400">Total Referrals</p>
                            <p class="text-xl font-bold"><%= referralCount %></p>
                        </div>
                        <div class="text-center">
                            <p class="text-gray-400">Earned</p>
                            <p class="text-xl font-bold">₹<%= referralCount * 100 %></p>
                        </div>
                    </div>
                    
                    <% if (referredUsers && referredUsers.length > 0) { %>
                        <h3 class="text-lg font-semibold text-[#88903F] mb-4">Referred Users</h3>
                        <div class="bg-gray-800 p-4 rounded-lg">
                            <ul class="divide-y divide-gray-700">
                                <% referredUsers.forEach(user => { %>
                                    <li class="py-3 flex justify-between items-center">
                                        <div>
                                            <p class="font-medium"><%= user.firstname %></p>
                                            <p class="text-gray-400 text-sm"><%= user.email %></p>
                                        </div>
                                        <div class="text-right">
                                            <p class="text-green-500">+₹100</p>
                                            <p class="text-gray-400 text-xs"><%= new Date(user.createdAt).toLocaleDateString() %></p>
                                        </div>
                                    </li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } else { %>
                        <div class="text-center p-8 bg-gray-800 rounded-lg">
                            <p class="text-gray-400">You haven't referred anyone yet.</p>
                            <p class="mt-2">Share your code to start earning rewards!</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        document.getElementById('copyButton').addEventListener('click', function() {
            const referralCode = document.getElementById('referralCode').textContent;
            navigator.clipboard.writeText(referralCode).then(function() {
                const originalText = document.getElementById('copyButton').textContent;
                document.getElementById('copyButton').textContent = 'Copied!';
                setTimeout(function() {
                    document.getElementById('copyButton').textContent = originalText;
                }, 2000);
            });
        });
        
        function shareOnFacebook() {
            const referralCode = document.getElementById('referralCode').textContent;
            const url = 'https://www.facebook.com/sharer/sharer.php?u=' + encodeURIComponent(window.location.origin) + '&quote=' + encodeURIComponent('Use my referral code ' + referralCode + ' to get ₹50 off on your first purchase!');
            window.open(url, '_blank');
        }
        
        function shareOnTwitter() {
            const referralCode = document.getElementById('referralCode').textContent;
            const url = 'https://twitter.com/intent/tweet?text=' + encodeURIComponent('Use my referral code ' + referralCode + ' to get ₹50 off on your first purchase! ' + window.location.origin);
            window.open(url, '_blank');
        }
        
        function shareOnWhatsApp() {
            const referralCode = document.getElementById('referralCode').textContent;
            const url = 'https://api.whatsapp.com/send?text=' + encodeURIComponent('Use my referral code ' + referralCode + ' to get ₹50 off on your first purchase! ' + window.location.origin);
            window.open(url, '_blank');
        }
    </script>
</body>

<%- include('../../views/partials/user/footer')%> 






