<section class="bg-[#1F1F1F] overflow-hidden">
  <div class="container mx-auto pb-10">
    <div class="w-16 h-[2px] bg-[#E8B888] mx-auto  mb-5"></div>
    <div class="relative flex justify-center items-center mb-6 ">
      <h2 class="text-white text-2xl font-sans">PRODUCTS</h2>
      <button id="toggleFilters" class="absolute right-0 bg-[#E8B888] text-black px-4 py-2 mr-20 rounded-md shadow-md">
        Sort by ▼
      </button>
    </div>
    <form action="/products" method="get">
      <div id="filterMenu"
        class="hidden bg-[#2A2A2A] text-white p-6 rounded-lg w-64 absolute top-28 right-10 shadow-lg">
        <h3 class="text-lg font-semibold mb-2">CATEGORIES</h3>
        <select name="category" class="p-2 w-full rounded bg-[#3A3A3A] text-white border border-gray-600">
          <option value="">All</option>
          <option value="gents" <%=query.category==='gents' ? 'selected' : '' %>>Men</option>
          <option value="ladies" <%=query.category==='ladies' ? 'selected' : '' %>>Ladies</option>
          <option value="couples" <%=query.category==='couples' ? 'selected' : '' %>>Couples</option>
        </select>

        <h3 class="text-lg font-semibold mb-2">Brands</h3>
        <select name="brand" class="p-2 w-full rounded bg-[#3A3A3A] text-white border border-gray-600">
          <option value="">All</option>
          <% brands.forEach(watch=> { %>
            <option value="<%= watch.brandName %>" <%=query.brand===watch.brandName ? 'selected' : '' %>>
              <%= watch.brandName %>
            </option>
            <% }) %>
        </select>

        <h3 class="text-lg font-semibold mb-2">Sorting</h3>
        <select name="sort" class="p-2 w-full rounded bg-[#3A3A3A] text-white border border-gray-600">
          <option value="AtoZ" <%=query.sort==='AtoZ' ? 'selected' : '' %>>A to Z</option>
          <option value="ZtoA" <%=query.sort==='ZtoA' ? 'selected' : '' %>>Z to A</option>
          <option value="highToLow" <%=query.sort==='highToLow' ? 'selected' : '' %>>Price high to low</option>
          <option value="lowToHigh" <%=query.sort==='lowToHigh' ? 'selected' : '' %>>Price low to high</option>
        </select>

        <h3 class="text-lg font-semibold mt-4 mb-2">PRICE RANGE</h3>
        <div class="flex flex-col space-y-2">
          <label class="text-sm">Price from:</label>
          <input type="number" name="priceFrom" id="priceFrom" placeholder="Any" value="<%= query.priceFrom || '' %>"
            class="p-2 rounded bg-[#3A3A3A] text-white border border-gray-600">

          <label class="text-sm">Price to:</label>
          <input type="number" name="priceTo" id="priceTo" placeholder="Any" value="<%= query.priceTo || '' %>"
            class="p-2 rounded bg-[#3A3A3A] text-white border border-gray-600">
        </div>

        <button type="submit" id="applyFilters" class="mt-4 bg-[#E8B888] text-black p-2 w-full rounded-md">
          Apply Filters
        </button>
      </div>
    </form>
    <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-3 gap-6 mt-6 p-10 md:m-10">
      <% products.forEach(watch=> { %>
        <div class="bg-[#2A2A2A] p-6 rounded-lg text-center">
          <a href="/productDetails?id=<%= watch._id %>">
            <img src="<%= watch.productImage[0] %>" alt="<%=watch.productName%>"
              class="mx-auto w-48 h-64 object-contain transition-transform duration-300 ease-in-out hover:scale-110">
          </a>
          <h3 class="text-white text-lg font-semibold mt-4">
            <%= watch.productName %>
          </h3>
          <p class="text-[#E8B888] text-xl font-semibold">
            $ <%= watch.regularPrice %>
          </p>
          <a href="/addtoCart?id=<%= watch._id %>">
            <button class="bg-[#3A3A3A] text-white px-4 py-2 mt-4 w-full">ADD TO CART</button>
          </a>
        </div>
        <% }) %>
    </div>
  </div>
  <!-- Pagination -->
  <% if (totalPages> 1) { %>
    <div class="flex justify-center mt-8">
      <div class="flex items-center gap-2">
        <% if (currentPage> 1) { %>
          <a href="/products?page=<%= currentPage - 1 %><%= filters ? '&' + filters : '' %>"
            class="px-4 py-2 bg-[#3A3A3A] text-white rounded-md hover:bg-white hover:text-black transition">
            ←
          </a>
          <% } %>

            <% for (let i=1; i <=totalPages; i++) { %>
              <a href="/products?page=<%= i %><%= filters ? '&' + filters : '' %>"
                class="px-4 py-2 rounded-md <%= currentPage === i ? 'bg-[#E8B888] text-black' : 'bg-[#3A3A3A] text-white' %> hover:bg-[#E8B888] hover:text-black transition">
                <%= i %>
              </a>
              <% } %>

                <% if (currentPage < totalPages) { %>
                  <a href="/products?page=<%= currentPage + 1 %><%= filters ? '&' + filters : '' %>"
                    class="px-4 py-2 bg-[#3A3A3A] text-white rounded-md hover:bg-white hover:text-black transition">
                    →
                  </a>
                  <% } %>
      </div>
    </div>
    <% } %>
</section>

<script>
  document.getElementById('toggleFilters').addEventListener('click', function () {
    document.getElementById('filterMenu').classList.toggle('hidden');
  });

  document.addEventListener('click', function (event) {
    const filterMenu = document.getElementById('filterMenu');
    const sortButton = document.getElementById('toggleFilters');

    if (!filterMenu.contains(event.target) && event.target !== sortButton) {
      filterMenu.classList.add('hidden');
    }
  });

  document.getElementById("search-toggle").addEventListener("click", function () {
    let searchBox = document.getElementById("mobile-search");
    searchBox.classList.toggle("hidden");
  });
  document.getElementById("menu-toggle").addEventListener("click", function () {
    let menu = document.getElementById("navbar-search");
    menu.classList.toggle("hidden");
  });

</script>

