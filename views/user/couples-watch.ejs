<%- include('../../views/partials/user/header')%>
    <script src="https://cdn.tailwindcss.com"></script>
  
    <section class="bg-[#1F1F1F] flex justify-center">
        <div class="relative flex flex-wrap justify-center items-center  w-full max-w-6xl px-4">
            <img src="/images/image copy 2.png"  alt="Men's Watch" class="w-[45%] min-w-[150px] h-[200px] object-cover">
            <img src="/images/image copy 2.png" alt="Men's Watch" class="w-[45%] min-w-[150px] h-[200px] object-cover">
            <p class="absolute text-white text-2xl md:text-3xl lg:text-4xl font-bold w-full text-center top-1/2 -translate-y-1/2">
                Couples Watch
            </p>
        </div>
    </section>

    <section class="bg-[#1F1F1F] p-20">
        <div class="container mx-auto text-center">
            <div class="w-16 h-[2px] bg-[#E8B888] mx-auto mb-2"></div>
            <h2 class="text-white text-2xl font-sans mb-10 relative inline-block">
                Couples Watch
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6 mt-6  md:m-10">
                <% couples.forEach(watch=> { %>
                    <div class="bg-[#2A2A2A] p-6 rounded-lg">
                        <a href="/productDetails?id=<%= watch._id %>">
                            <img src="<%= watch.productImage[0] %>" alt="<%=watch.productName%>"
                                class="mx-auto w-48 h-64 object-contain transition-transform duration-300 ease-in-out hover:scale-110">
                        </a>
                        <h3 class="text-white text-lg font-semibold mt-4">
                            <%= watch.productName %>
                        </h3>
                        <p class="text-[#E8B888] text-xl font-semibold">$
                            <%= watch.regularPrice %>
                        </p>
                        <a href="/addtoCart?id=<%= watch._id %>">
                            <button class="bg-[#3A3A3A] text-white px-4 py-2 mt-4 w-full">ADD TO CART</button>
                        </a>
                    </div>
                    <% }) %>
            </div>
        </div>
    </section>



    <%- include('../../views/partials/user/footer')%>