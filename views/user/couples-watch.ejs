<head>
     <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LB | Lybros</title>
    <link rel="icon" href="/images/hand-watch - Copy.png" type="image/png"> 
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <script src="/js/cart-utils.js"></script>
    <script src="/js/breadcrumbs-handler.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<header class="sticky top-0 z-50 bg-[#1F1F1F] shadow-md">
  <%- include('../../views/partials/user/header')%>
</header>
<script src="https://cdn.tailwindcss.com"></script>
<script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

<section class="relative h-[300px] lg:h-[400px] overflow-hidden bg-[#1A1A1A] flex items-center justify-center">
    <!-- Background Elements -->
    <div class="absolute inset-0 bg-gradient-animated opacity-80"></div>
    <div class="absolute w-full h-full bg-[url('/images/image copy 2.png')] bg-cover bg-center opacity-20"></div>
    <div class="absolute inset-0 bg-gradient-to-b from-black/80 via-transparent to-black/80"></div>
    <div class="absolute -top-20 -right-20 w-64 h-64 bg-[#E8B888]/20 opacity-20 rounded-full filter blur-3xl animate-pulse-subtle"></div>
    <div class="absolute -bottom-20 -left-20 w-64 h-64 bg-[#E8B888]/20 opacity-20 rounded-full filter blur-3xl animate-pulse-subtle" style="animation-delay: 1s;"></div>
    
    <!-- Content -->
    <div class="relative z-10 text-center px-4">
        <h1 class="text-4xl md:text-6xl font-bold mb-4 text-white relative">
            <span class="absolute -inset-1 rounded-lg bg-gradient-to-r from-[#E8B888]/20 to-amber-600/20 blur"></span>
            <span class="relative">Couples Collection</span>
        </h1>
        <p class="text-lg md:text-xl text-gray-300 max-w-2xl mx-auto font-light">
            Discover our matching timepieces designed for couples who value timeless connection
        </p>
        <div class="w-24 h-1 bg-gradient-to-r from-[#E8B888] to-amber-600 mx-auto mt-6 animate-shimmer"></div>
    </div>
</section>

<section class="bg-gradient-to-b from-[#1A1A1A] to-[#1F1F1F] py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <div class="w-24 h-1 bg-gradient-to-r from-[#E8B888] to-amber-600 mx-auto mb-4 animate-[grow_0.6s_ease-in-out]"></div>
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4 font-serif tracking-wide">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#E8B888] to-amber-200">PERFECTLY PAIRED</span>
      </h2>
      <p class="text-gray-400 max-w-2xl mx-auto animate-[fadeIn_1s_ease-in-out]">
        Discover our collection of matching watches designed for couples who value timeless connection
      </p>
    </div>

    <!-- Filter Button -->
    <div class="flex justify-end mb-8 relative z-20">
      <button id="toggleFilters" 
              class="relative overflow-hidden group px-6 py-3 rounded-full shadow-lg transition-all duration-300">
        <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-[#E8B888] to-amber-600 rounded-full"></span>
        <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-amber-600 to-[#E8B888] rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300"></span>
        <span class="relative flex items-center gap-2 text-black font-medium">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform duration-300 group-hover:rotate-180" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M3 3a1 1 0 011-1h12a1 1 0 011 1v3a1 1 0 01-.293.707L12 11.414V15a1 1 0 01-.293.707l-2 2A1 1 0 018 17v-5.586L3.293 6.707A1 1 0 013 6V3z" clip-rule="evenodd" />
        </svg>
        <span>Filter by Brands</span>
        </span>
      </button>

      <!-- Filter Dropdown -->
      <form action="/couples-brandFilter" method="post" id="filterMenu"
            class="hidden bg-[#222] p-6 rounded-lg w-full md:w-80 absolute top-14 right-0 z-40 shadow-[0_10px_40px_-15px_rgba(232,184,136,0.3)] border border-[#E8B888]/20">
        <div class="relative mb-4">
          <div class="w-12 h-1 bg-gradient-to-r from-[#E8B888] to-amber-600 mb-2"></div>
          <h3 class="text-lg font-semibold text-white">SELECT BRAND</h3>
          <div class="absolute -right-2 -top-2 w-8 h-8 bg-[#E8B888]/10 rounded-full blur-md"></div>
        </div>
        
        <div class="relative">
          <select name="brands" class="w-full bg-[#2A2A2A] text-white border border-[#E8B888]/30 rounded-lg p-3 appearance-none focus:outline-none focus:ring-2 focus:ring-[#E8B888]/50 transition-all duration-300">
          <option value="">All Brands</option>
          <% brands.forEach(watch=> { %>
            <option value="<%= watch.brandName %>" <%=selectedBrand===watch.brandName ? 'selected' : '' %>>
              <%= watch.brandName %>
            </option>
          <% }) %>
        </select>
          <div class="absolute inset-y-0 right-0 flex items-center px-3 pointer-events-none">
            <svg class="w-5 h-5 text-[#E8B888]" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </div>
        </div>
        
        <button type="submit" class="mt-4 w-full relative overflow-hidden group py-3 rounded-lg">
          <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-[#E8B888] to-amber-600 rounded-lg"></span>
          <span class="relative z-10 font-medium text-black group-hover:text-white transition-colors duration-300 flex items-center justify-center">
          Apply Filters
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
          </span>
        </button>
      </form>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 xl:grid-cols-2 gap-8">
      <% couples.forEach(watch=> { %>
        <div class="relative group">
          <!-- Background Glow Effect -->
          <div class="absolute -inset-1 bg-gradient-to-r from-[#E8B888]/30 to-amber-600/30 rounded-xl blur opacity-0 group-hover:opacity-70 transition duration-500"></div>
          
          <div class="relative bg-gradient-to-b from-[#2A2A2A] to-[#1E1E1E] p-6 rounded-xl shadow-lg transition-all duration-500 hover:-translate-y-2 hover:shadow-[0_10px_40px_-15px_rgba(232,184,136,0.3)] overflow-hidden">
            <div class="absolute top-0 right-0 z-10">
              <div class="bg-gradient-to-r from-[#E8B888] to-amber-600 text-white font-bold py-1 px-4 rounded-bl-lg shadow-md transform rotate-0 hover:rotate-3 transition-all duration-300">PAIRED</div>
            </div>
            
          <div class="relative h-64 overflow-hidden rounded-lg mb-4">
            <a href="/productDetails?id=<%= watch._id %>" class="block h-full">
              <img src="<%= watch.productImage[0] %>" alt="<%= watch.productName %>"
                     class="w-full h-full object-contain transition-all duration-700 group-hover:opacity-0 group-hover:scale-90 absolute inset-0">
              
              <% if (watch.productImage[1]) { %>
                <img src="<%= watch.productImage[1] %>" alt="<%= watch.productName %> - Alternate View"
                      class="w-full h-full object-contain transition-all duration-700 opacity-0 group-hover:opacity-100 group-hover:scale-105 absolute inset-0">
              <% } else { %>
                <img src="<%= watch.productImage[0] %>" alt="<%= watch.productName %>"
                      class="w-full h-full object-contain transition-all duration-700 opacity-0 group-hover:opacity-100 group-hover:scale-105 absolute inset-0">
              <% } %>
            </a>
           
            <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <a href="/productDetails?id=<%= watch._id %>" 
                 class="block text-center text-white text-sm font-medium py-2 hover:text-[#E8B888] transition-colors">
                QUICK VIEW
              </a>
            </div>
          </div>
         
          <div class="relative z-10">
              <h3 class="text-white text-lg font-medium mb-3 group-hover:text-[#E8B888] transition-colors duration-300">
              <%= watch.productName %>
            </h3>
              
              <div class="flex items-center justify-between mb-5">
                <div class="flex flex-col">
                  <span class="text-[#E8B888] text-2xl font-bold">₹<%= watch.salesPrice %></span>
                  <% if (watch.newOffer > 0) { %>
                    <span class="text-gray-400 text-sm line-through">₹<%= watch.regularPrice %></span>
                  <% } %>
                </div>
                
                <% if (watch.newOffer && watch.newOffer > 0) { %>
                <div class="bg-black border border-[#E8B888]/50 text-[#E8B888] px-3 py-1.5 rounded shadow-md relative overflow-hidden group-hover:bg-[#E8B888] group-hover:text-black transition-all duration-500">
                  <span class="relative z-10 font-bold text-sm"><%= watch.newOffer %>% OFF</span>
                  <div class="absolute inset-0 bg-gradient-to-r from-[#E8B888]/0 to-[#E8B888]/20 transform -skew-x-12 group-hover:skew-x-12 transition-all duration-700"></div>
                </div>
                <% } %>
              </div>
              
              <button onclick="addToCart('<%= watch._id %>')" 
                 class="relative w-full overflow-hidden bg-gradient-to-r from-[#3A3A3A] to-[#2A2A2A] text-white py-3 rounded-lg text-center font-medium group">
                  <span class="relative z-10 group-hover:text-black transition-colors duration-500">ADD TO CART</span>
                  <div class="absolute inset-0 w-0 bg-gradient-to-r from-[#E8B888] to-amber-600 transition-all duration-300 group-hover:w-full"></div>
              </button>
            </div>
          
            <div class="absolute -bottom-10 -right-10 w-20 h-20 rounded-full bg-[#E8B888]/10 group-hover:bg-[#E8B888]/20 transition-all duration-700"></div>
            <div class="absolute -top-5 -left-5 w-16 h-16 rounded-full bg-[#E8B888]/5 group-hover:bg-[#E8B888]/10 transition-all duration-1000"></div>
          </div>
        </div>
      <% }) %>
    </div>

    <% if (totalPages> 1) { %>
      <div class="flex justify-center mt-16 pb-10">
        <div class="relative">
          <div class="absolute -inset-4 bg-gradient-to-r from-[#E8B888]/20 to-amber-600/20 rounded-xl blur-md opacity-40"></div>
          <div class="relative flex items-center gap-1 sm:gap-2 bg-[#222]/80 px-4 py-3 rounded-xl">
          <% if (currentPage> 1) { %>
            <a href="/couplesWatch?page=<%= currentPage - 1 %><%= selectedBrand ? '&brand=' + selectedBrand : '' %>"
                 class="group relative px-3 sm:px-4 py-2 overflow-hidden rounded-md">
                <span class="absolute inset-0 w-full h-full transition-all duration-300 bg-[#3A3A3A] rounded-md"></span>
                <span class="absolute inset-0 w-full h-full transition-all duration-300 bg-[#E8B888] opacity-0 group-hover:opacity-100 rounded-md"></span>
                <span class="relative z-10 flex items-center text-white group-hover:text-black">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 transition-transform duration-300 group-hover:-translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
                  <span>Prev</span>
                </span>
            </a>
          <% } %>

          <a href="/couplesWatch?page=1<%= selectedBrand ? '&brand=' + selectedBrand : '' %>"
               class="group relative px-3 sm:px-4 py-2 overflow-hidden rounded-md">
              <span class="absolute inset-0 w-full h-full transition-all duration-300 <%= currentPage === 1 ? 'bg-gradient-to-r from-[#E8B888] to-amber-600' : 'bg-[#3A3A3A]' %> rounded-md"></span>
              <span class="absolute inset-0 w-full h-full transition-all duration-300 bg-gradient-to-r from-[#E8B888] to-amber-600 opacity-0 group-hover:opacity-100 rounded-md"></span>
              <span class="relative z-10 <%= currentPage === 1 ? 'text-black font-bold' : 'text-white' %> group-hover:text-black">1</span>
          </a>

          <% if (currentPage > 3 && totalPages > 5) { %>
              <span class="px-2 text-[#E8B888]/70">•••</span>
          <% } %>

          <% for (let i = Math.max(2, currentPage - 1); i <= Math.min(totalPages - 1, currentPage + 1); i++) { %>
            <a href="/couplesWatch?page=<%= i %><%= selectedBrand ? '&brand=' + selectedBrand : '' %>"
                 class="group relative px-3 sm:px-4 py-2 overflow-hidden rounded-md">
                <span class="absolute inset-0 w-full h-full transition-all duration-300 <%= currentPage === i ? 'bg-gradient-to-r from-[#E8B888] to-amber-600' : 'bg-[#3A3A3A]' %> rounded-md"></span>
                <span class="absolute inset-0 w-full h-full transition-all duration-300 bg-gradient-to-r from-[#E8B888] to-amber-600 opacity-0 group-hover:opacity-100 rounded-md"></span>
                <span class="relative z-10 <%= currentPage === i ? 'text-black font-bold' : 'text-white' %> group-hover:text-black"><%= i %></span>
            </a>
          <% } %>

          <% if (currentPage < totalPages - 2 && totalPages > 5) { %>
              <span class="px-2 text-[#E8B888]/70">•••</span>
          <% } %>

          <% if (totalPages > 1) { %>
            <a href="/couplesWatch?page=<%= totalPages %><%= selectedBrand ? '&brand=' + selectedBrand : '' %>"
                 class="group relative px-3 sm:px-4 py-2 overflow-hidden rounded-md">
                <span class="absolute inset-0 w-full h-full transition-all duration-300 <%= currentPage === totalPages ? 'bg-gradient-to-r from-[#E8B888] to-amber-600' : 'bg-[#3A3A3A]' %> rounded-md"></span>
                <span class="absolute inset-0 w-full h-full transition-all duration-300 bg-gradient-to-r from-[#E8B888] to-amber-600 opacity-0 group-hover:opacity-100 rounded-md"></span>
                <span class="relative z-10 <%= currentPage === totalPages ? 'text-black font-bold' : 'text-white' %> group-hover:text-black"><%= totalPages %></span>
            </a>
          <% } %>

          <% if (currentPage < totalPages) { %>
            <a href="/couplesWatch?page=<%= currentPage + 1 %><%= selectedBrand ? '&brand=' + selectedBrand : '' %>"
                 class="group relative px-3 sm:px-4 py-2 overflow-hidden rounded-md">
                <span class="absolute inset-0 w-full h-full transition-all duration-300 bg-[#3A3A3A] rounded-md"></span>
                <span class="absolute inset-0 w-full h-full transition-all duration-300 bg-[#E8B888] opacity-0 group-hover:opacity-100 rounded-md"></span>
                <span class="relative z-10 flex items-center text-white group-hover:text-black">
                  <span>Next</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
                </span>
            </a>
          <% } %>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</section>

<script>
  document.getElementById('toggleFilters').addEventListener('click', function(e) {
    e.stopPropagation();
    document.getElementById('filterMenu').classList.toggle('hidden');
  });

  document.addEventListener('click', function(event) {
    const filterMenu = document.getElementById('filterMenu');
    const toggleButton = document.getElementById('toggleFilters');
    
    if (!filterMenu.contains(event.target) && event.target !== toggleButton) {
      filterMenu.classList.add('hidden');
    }
  });
</script>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  @keyframes pulse-subtle {
    0%, 100% { opacity: 0.7; }
    50% { opacity: 1; }
  }
  @keyframes gradient-shift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  @keyframes shimmer {
    0% { transform: translateX(-100%); }
    100% { transform: translateX(100%); }
  }
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
  }
  @keyframes grow {
    from { transform: scaleX(0); }
    to { transform: scaleX(1); }
  }
  @keyframes slideDown {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
  .animate-pulse-subtle {
    animation: pulse-subtle 3s ease-in-out infinite;
  }
  .animate-shimmer {
    position: relative;
    overflow: hidden;
  }
  .animate-shimmer::after {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background: linear-gradient(to right, transparent, rgba(232, 184, 136, 0.1), transparent);
    transform: translateX(-100%);
    animation: shimmer 3s infinite;
  }
  .bg-gradient-animated {
    background: linear-gradient(45deg, #1a1a1a, #1f1f1f, #232323, #1f1f1f, #1a1a1a);
    background-size: 400% 400%;
    animation: gradient-shift 15s ease infinite;
  }
  .card-hover {
    transition: all 0.3s ease;
  }
  .card-hover:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }
  .bg-gradient-radial {
    background-image: radial-gradient(var(--tw-gradient-stops));
  }
  
  ::-webkit-scrollbar {
    width: 8px;
  }
  
  ::-webkit-scrollbar-track {
    background: #1A1A1A;
  }
  
  ::-webkit-scrollbar-thumb {
    background: #E8B888;
    border-radius: 4px;
  }
  
  ::-webkit-scrollbar-thumb:hover {
    background: #c99d66;
  }
</style>

<%- include('../../views/partials/user/footer')%>