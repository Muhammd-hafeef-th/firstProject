<%- include('../../views/partials/user/header') %>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .arrow-button {
            border: 2px solid #d7c5c5;
            background-color: transparent;
            border-radius: 50%;
            padding: 4px 6px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .arrow-button i {
            color: #a3a3a3;
            font-size: 16px;
        }

        .arrow-button:hover {
            background-color: rgba(255, 255, 255, 0.05);
        }
    </style>

    <body class="bg-[#1F1F1F] text-white">
        <div class="flex flex-col md:flex-row min-h-screen p-4 md:p-0">
            <div class="w-full md:w-1/4 bg-black p-6 m-4 rounded-xl flex flex-col md:h-screen">
                <h2 class="text-lg font-bold mb-4">SETTINGS</h2>
                <ul>
                    <li class="mb-2 text-gray-400"><a href="/profile">Personal Info</a></li>
                    <li class="mb-2 text-[#88903F] hover:text-white"><a href="/orders">Orders</a></li>
                    <li class="mb-2  text-gray-400 hover:text-white"><a href="/address">Address</a></li>
                    <li class="mb-2 text-gray-400 hover:text-white">Wallet</li>
                    <% if (!userDatas || Object.keys(userDatas).length===0) { %>
                        <button class="mt-10 bg-orange-500 w-full py-2  rounded"><a href="/login">Login</a></button>
                        <% } %>
                </ul>
                <% if (userDatas && Object.keys(userDatas).length> 0) { %>
                    <button class="bg-orange-500 w-full py-2 mt-auto rounded"><a href="/logout">Logout</a></button>
                    <% } %>
            </div>
            <div class="flex-1 flex justify-center p-4 md:p-10 ">
                <div class="w-full max-w-3xl bg-[#1F1F1F] p-6 rounded-lg border border-gray-700">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-xl font-bold">ORDERS</h2>
                    </div>
                    <div class="p-6 bg-[#1F1F1F] min-h-screen text-white">
                        <div class="bg-yellow-500 text-black font-semibold rounded-t-md overflow-hidden">
                            <div class="grid grid-cols-5 gap-4 p-4 ">
                                <div>Product Id</div>
                                <div>Price</div>
                                <div>Delivery Date</div>
                                <div>Status</div>
                                <div> </div>
                            </div>
                        </div>

                        <div class="bg-[#2b2929] divide-y divide-gray-700 rounded-b-md">
                            <!-- Order Row -->
                            <div class="grid grid-cols-5 items-center gap-4 p-4">
                                <div>#14556</div>
                                <div>$1250</div>
                                <div>14/02/2025</div>
                                <div><span
                                        class="bg-green-500 text-white px-3 py-1 rounded-full text-sm font-bold">DELIVERED</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <img src="watch1.png" class="w-10 h-10 object-cover rounded" />
                                    <img src="watch2.png" class="w-10 h-10 object-cover rounded" />
                                    <button class="arrow-button">
                                        <i class="fas fa-arrow-right"></i>
                                    </button>
                                </div>
                            </div>

                            <!-- Second Row -->
                            <div class="grid grid-cols-5 items-center gap-4 p-4">
                                <div>#14432</div>
                                <div>$1550</div>
                                <div>14/02/2025</div>
                                <div><span
                                        class="bg-green-500 text-white px-3 py-1 rounded-full text-sm font-bold">DELIVERED</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <img src="watch3.png" class="w-10 h-10 object-cover rounded" />
                                    <img src="watch4.png" class="w-10 h-10 object-cover rounded" />
                                    <button class="arrow-button">
                                        <i class="fas fa-arrow-right"></i>
                                    </button>
                                </div>
                            </div>

                            <!-- Third Row -->
                            <div class="grid grid-cols-5 items-center gap-4 p-4">
                                <div>#14230</div>
                                <div>$2110</div>
                                <div>14/02/2025</div>
                                <div><span
                                        class="bg-yellow-500 text-black px-3 py-1 rounded-full text-sm font-bold">SHIPPED</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    <img src="watch5.png" class="w-10 h-10 object-cover rounded" />
                                    <img src="watch6.png" class="w-10 h-10 object-cover rounded" />
                                    <button class="arrow-button">
                                        <i class="fas fa-arrow-right"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>

        <!-- Delete Confirmation Modal -->
        <div id="deleteModal"
            class="fixed inset-0 bg-black bg-opacity-50 backdrop-blur-sm flex items-center justify-center hidden z-50 transition-all duration-300 ease-in-out">
            <div
                class="bg-[#2d2d2d] border border-gray-700 text-white p-6 rounded-2xl shadow-2xl w-96 max-w-full relative">
                <div class="flex justify-center mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-red-500" fill="none"
                        viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M13 16h-1v-4h-1m1-4h.01M12 20a8 8 0 100-16 8 8 0 000 16z" />
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-center mb-2">Delete Address?</h3>
                <p class="text-sm text-gray-300 text-center mb-6">This action cannot be undone. Are you sure you want to
                    delete this address?</p>
                <div class="flex justify-center gap-4">
                    <form id="deleteForm" method="POST" action="">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit"
                            class="bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-2.5 rounded-lg w-[140px] h-[42px] flex items-center justify-center">
                            Yes, Delete
                        </button>
                    </form>
                    <button onclick="closeModal()" type="button"
                        class="bg-gray-600 hover:bg-gray-700 text-white font-semibold px-6 py-2.5 rounded-lg w-[140px] h-[42px] flex items-center justify-center">
                        Cancel
                    </button>
                </div>
                <button onclick="closeModal()" class="absolute top-3 right-3 text-gray-400 hover:text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
        </div>


    </body>

    <%- include('../../views/partials/user/footer') %>