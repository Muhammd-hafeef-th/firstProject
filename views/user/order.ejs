<header class="sticky top-0 z-50 bg-[#1F1F1F] shadow-md">
    <%- include('../../views/partials/user/header')%>
</header>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .arrow-button {
            border: 2px solid #d7c5c5;
            background-color: transparent;
            border-radius: 50%;
            padding: 4px 6px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .arrow-button i {
            color: #a3a3a3;
            font-size: 16px;
        }

        .arrow-button:hover {
            background-color: rgba(255, 255, 255, 0.05);
        }

        @keyframes float {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-5px);
            }
        }

        .animate-float {
            animation: float 3s ease-in-out infinite;
        }

        .arrow-button:hover i {
            transform: translateX(2px);
            transition: transform 0.3s ease;
        }

        @media (max-width: 768px) {
            .grid-cols-12>div {
                padding: 0.5rem;
            }
        }
    </style>

    <body class="bg-[#1F1F1F] text-white">
        <div class="flex flex-col md:flex-row min-h-screen p-4 md:p-0">
            <div class="w-full md:w-64 bg-[#1F1F1F] p-6 md:sticky md:top-16 md:h-[calc(100vh-4rem)]">
                <h2 class="text-xl font-bold mb-6 text-[#88903F] border-b border-[#333] pb-4">SETTINGS</h2>
                <ul class="space-y-3">
                    <li>
                        <a href="/profile" class="flex items-center p-2 rounded-lg hover:bg-[#333] transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                            Personal Info
                        </a>
                    </li>
                    <li>
                        <a href="/orders" class="flex items-center p-2 rounded-lg hover:bg-[#333] transition-colors bg-[#333] text-[#88903F]">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                            </svg>
                            Orders
                        </a>
                    </li>
                    <li>
                        <a href="/address" class="flex items-center p-2 rounded-lg ">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            Address
                        </a>
                    </li>
                    <li>
                        <a href="/wallet" class="flex items-center p-2 rounded-lg hover:bg-[#333] transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
                            </svg>
                            Wallet
                        </a>
                    </li>
                    <li>
                        <a href="/referrals" class="flex items-center p-2 rounded-lg hover:bg-[#333] transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                            </svg>
                            Referrals
                        </a>
                    </li>
                </ul>
                
                <div class="mt-10 border-t border-[#333] pt-6">
                    <% if (!userDatas || Object.keys(userDatas).length===0) { %>
                        <a href="/login" class="block w-full bg-[#88903F] hover:bg-[#a0a84f] text-white py-2 px-4 rounded-lg text-center transition-colors">
                            Login
                        </a>
                    <% } else { %>
                        <a href="/logout" class="block w-full bg-[#333] hover:bg-[#444] text-white py-2 px-4 rounded-lg text-center transition-colors">
                            Logout
                        </a>
                    <% } %>
                </div>
            </div>
            <div class="flex-1 flex justify-center p-4 md:p-10">
                <div
                    class="w-full max-w-6xl bg-[#1F1F1F] p-6 rounded-lg border border-gray-700 shadow-2xl shadow-black/50">
                    <div class="flex justify-between items-center mb-6">
                        <h2
                            class="text-2xl font-bold bg-gradient-to-r text-white bg-clip-text text-transparent">
                            ORDER HISTORY</h2>
                            <form action="/orders" method="get" class="relative flex items-center gap-2">
    <div class="relative">
        <input type="text" id="search" name="search" value="<%= search %>" placeholder="Search orders..."
            class="bg-[#2b2929] border border-gray-700 rounded-full py-2 px-4 text-white focus:outline-none focus:ring-2 focus:ring-yellow-500 transition-all duration-300 w-48 md:w-64">
        <button type="submit"
            class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-500">
            <i class="fas fa-search"></i>
        </button>
    </div>

    <% if (search) { %>
        <a href="/orders"
           class="bg-red-600 hover:bg-red-700 text-white px-4 py-1 rounded-full text-sm transition duration-300">
            Clear
        </a>
    <% } %>
    
</form>

                    </div>

                    <div class="p-4 md:p-6 bg-[#1F1F1F] text-white">
                        <div
                            class="bg-gradient-to-r bg-[#88903F] text-black font-semibold rounded-t-lg overflow-hidden shadow-md">
                            <div class="grid grid-cols-12 gap-4 p-4 items-center">
                                <div class="col-span-3 md:col-span-2">Order ID</div>
                                <div class="col-span-3 md:col-span-2">Amount</div>
                                <div class="hidden md:block md:col-span-2">Date</div>
                                <div class="col-span-3 md:col-span-3">Status</div>
                                <div class="col-span-3 md:col-span-3">Items</div>
                            </div>
                        </div>

                        <div class="bg-[#2b2929] divide-y divide-gray-700 rounded-b-lg shadow-lg overflow-hidden">
                            <% if (orders.length===0) { %>
                                <div class="bg-[#2b2929] p-8 text-center rounded-lg">
                                    <i class="fas fa-box-open text-4xl text-yellow-500 mb-4"></i>
                                    <h3 class="text-xl font-semibold mb-2">No orders found</h3>
                                    <p class="text-gray-400 mb-4">You haven't placed any orders yet.</p>
                                    <a href="/products"
                                        class="inline-block bg-yellow-500 hover:bg-yellow-600 text-black font-bold py-2 px-6 rounded-lg transition-all duration-300">
                                        Start Shopping
                                    </a>
                                </div>
                                <% } else { %>

                                    <% orders.forEach(order=> { %>
                                        <div
                                            class="grid grid-cols-12 items-center gap-4 p-4 hover:bg-[#333232] transition-all duration-300 transform hover:-translate-y-0.5">
                                            <div class="col-span-3 md:col-span-2 font-mono text-[#88903F]">#<%=
                                                    order.id %>
                                            </div>
                                            <div class="col-span-3 md:col-span-2 font-bold">â‚¹<%=
                                                    order.price.toLocaleString() %>
                                            </div>
                                            <div class="hidden md:block md:col-span-2 text-gray-300">
                                                <%= order.date %>
                                            </div>
                                            <div class="col-span-3 md:col-span-3">
                                                <span class="
                                                 <% if (order.status === 'Delivered') { %>
                                                     bg-green-500/90 animate-pulse text-white
                                                 <% } else if (order.status === 'Shipped') { %>
                                                     bg-blue-500 text-white
                                                 <% } else if (order.status === 'Processing') { %>
                                                     bg-purple-500 text-white
                                                 <% } else if (order.status === 'Pending') { %>
                                                     bg-yellow-500 text-black
                                                 <% } else if (order.status === 'Cancelled' || order.status === 'Returned') { %>
                                                     bg-red-500 text-white
                                                 <% }  else if (order.status === 'Return Rejected') { %>
                                                    bg-red-500 text-white
                                                <% } else if (order.status === 'Return Request') { %>
                                                    bg-yellow-500 text-black
                                                <% }else { %>
                                                     bg-gray-500 text-white
                                                 <% } %>
                                                 px-3 py-1 rounded-full text-xs md:text-sm font-bold">
                                                    <%= order.status %>
                                                </span>
                                            </div>
                                            <div class="col-span-3 md:col-span-3">
                                                <div class="flex items-center gap-2">
                                                    <% order.items.slice(0, 2).forEach(item=> { %>
                                                        <div class="relative group">
                                                            <% if (item.image) { %>
                                                                <img src="<%= item.image %>" alt="<%= item.name %>"
                                                                    class="w-10 h-10 object-cover rounded border-2 border-yellow-500 transition-transform duration-300 group-hover:scale-110" />
                                                                <% } else { %>
                                                                    <div
                                                                        class="w-10 h-10 bg-gray-700 rounded border-2 border-yellow-500 flex items-center justify-center">
                                                                        <i class="fas fa-image text-gray-400"></i>
                                                                    </div>
                                                                    <% } %>
                                                                        <% if (item===order.items[0] &&
                                                                            order.items.length> 2) { %>
                                                                            <div
                                                                                class="absolute -bottom-1 -right-1 bg-yellow-500 rounded-full w-5 h-5 flex items-center justify-center text-xs font-bold">
                                                                                +<%= order.items.length - 2 %>
                                                                            </div>
                                                                            <% } %>
                                                        </div>
                                                        <% }); %>
                                                            <button
                                                                class="arrow-button ml-auto p-2 rounded-full bg-[#3a3838] hover:bg-yellow-500 hover:text-black transition-all duration-300">
                                                                <a href="/order-details?orderId=<%=order.id%>"><i
                                                                        class="fas fa-chevron-right text-sm"></i></a>
                                                            </button>
                                                </div>

                                            </div>
                                            <div class="col-span-12 md:hidden text-sm text-gray-400 mt-2">
                                                <%= order.mobileDate %>
                                            </div>
                                        </div>
                                        <% }); %>

                                            <% } %>
                        </div>

                        <div class="flex justify-between items-center mt-6 text-sm">
                            <% if (currentPage> 1) { %>
                                <a href="?page=<%= currentPage - 1 %>&limit=<%= limit %>"
                                    class="flex items-center gap-2 bg-[#2b2929] hover:bg-[#88903F] hover:text-black px-4 py-2 rounded-lg transition-all duration-300">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                                <% } else { %>
                                    <span
                                        class="flex items-center gap-2 bg-[#2b2929] text-gray-500 px-4 py-2 rounded-lg cursor-not-allowed">
                                        <i class="fas fa-chevron-left"></i> Previous
                                    </span>
                                    <% } %>

                                        <div class="flex gap-2">
                                            <% for(let i=1; i <=Math.min(5, totalPages); i++) { %>
                                                <a href="?page=<%= i %>&limit=<%= limit %>"
                                                    class="w-8 h-8 rounded-full <%= currentPage === i ? 'bg-[#88903F] text-black font-bold' : 'bg-[#2b2929] hover:bg-[#88903F] hover:text-black' %> transition-all duration-300 flex items-center justify-center">
                                                    <%= i %>
                                                </a>
                                                <% } %>
                                                    <% if (totalPages> 5) { %>
                                                        <span class="flex items-center px-2">...</span>
                                                        <a href="?page=<%= totalPages %>&limit=<%= limit %>"
                                                            class="w-8 h-8 rounded-full bg-[#2b2929] hover:bg-[#88903F] hover:text-black transition-all duration-300 flex items-center justify-center">
                                                            <%= totalPages %>
                                                        </a>
                                                        <% } %>
                                        </div>

                                        <% if (currentPage < totalPages) { %>
                                            <a href="?page=<%= currentPage + 1 %>&limit=<%= limit %>"
                                                class="flex items-center gap-2 bg-[#2b2929] hover:bg-[#88903F] hover:text-black px-4 py-2 rounded-lg transition-all duration-300">
                                                Next <i class="fas fa-chevron-right"></i>
                                            </a>
                                            <% } else { %>
                                                <span
                                                    class="flex items-center gap-2 bg-[#2b2929] text-gray-500 px-4 py-2 rounded-lg cursor-not-allowed">
                                                    Next <i class="fas fa-chevron-right"></i>
                                                </span>
                                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </body>

    <%- include('../../views/partials/user/footer') %>