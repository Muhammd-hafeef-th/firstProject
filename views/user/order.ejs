<%- include('../../views/partials/user/header') %>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .arrow-button {
            border: 2px solid #d7c5c5;
            background-color: transparent;
            border-radius: 50%;
            padding: 4px 6px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .arrow-button i {
            color: #a3a3a3;
            font-size: 16px;
        }

        .arrow-button:hover {
            background-color: rgba(255, 255, 255, 0.05);
        }

        @keyframes float {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-5px);
            }
        }

        .animate-float {
            animation: float 3s ease-in-out infinite;
        }

        .arrow-button:hover i {
            transform: translateX(2px);
            transition: transform 0.3s ease;
        }

        @media (max-width: 768px) {
            .grid-cols-12>div {
                padding: 0.5rem;
            }
        }
    </style>

    <body class="bg-[#1F1F1F] text-white">
        <div class="flex flex-col md:flex-row min-h-screen p-4 md:p-0">
            <div class="w-full md:w-1/4 bg-black p-6 m-4 rounded-xl flex flex-col md:h-screen">
                <h2 class="text-lg font-bold mb-4">SETTINGS</h2>
                <ul>
                    <li class="mb-2 text-gray-400"><a href="/profile">Personal Info</a></li>
                    <li class="mb-2 text-[#88903F] hover:text-white"><a href="/orders">Orders</a></li>
                    <li class="mb-2  text-gray-400 hover:text-white"><a href="/address">Address</a></li>
                    <li class="mb-2 text-gray-400 hover:text-white">Wallet</li>
                    <% if (!userDatas || Object.keys(userDatas).length===0) { %>
                        <button class="mt-10 bg-orange-500 w-full py-2  rounded"><a href="/login">Login</a></button>
                        <% } %>
                </ul>
                <% if (userDatas && Object.keys(userDatas).length> 0) { %>
                    <button class="bg-orange-500 w-full py-2 mt-auto rounded"><a href="/logout">Logout</a></button>
                    <% } %>
            </div>
            <div class="flex-1 flex justify-center p-4 md:p-10">
                <div
                    class="w-full max-w-6xl bg-[#1F1F1F] p-6 rounded-lg border border-gray-700 shadow-2xl shadow-black/50">
                    <div class="flex justify-between items-center mb-6">
                        <h2
                            class="text-2xl font-bold bg-gradient-to-r from-yellow-400 to-yellow-600 bg-clip-text text-transparent">
                            ORDER HISTORY</h2>
                        <div class="relative">
                            <input type="text" placeholder="Search orders..."
                                class="bg-[#2b2929] border border-gray-700 rounded-full py-2 px-4 text-white focus:outline-none focus:ring-2 focus:ring-yellow-500 transition-all duration-300 w-48 md:w-64">
                            <i class="fas fa-search absolute right-4 top-3 text-gray-400"></i>
                        </div>
                    </div>

                    <div class="p-4 md:p-6 bg-[#1F1F1F] text-white">
                        <div
                            class="bg-gradient-to-r from-yellow-500 to-yellow-600 text-black font-semibold rounded-t-lg overflow-hidden shadow-md">
                            <div class="grid grid-cols-12 gap-4 p-4 items-center">
                                <div class="col-span-3 md:col-span-2">Order ID</div>
                                <div class="col-span-3 md:col-span-2">Amount</div>
                                <div class="hidden md:block md:col-span-2">Date</div>
                                <div class="col-span-3 md:col-span-2">Status</div>
                                <div class="col-span-3 md:col-span-4">Items</div>
                            </div>
                        </div>

                        <div class="bg-[#2b2929] divide-y divide-gray-700 rounded-b-lg shadow-lg overflow-hidden">
                            <% if (orders.length===0) { %>
                                <div class="bg-[#2b2929] p-8 text-center rounded-lg">
                                    <i class="fas fa-box-open text-4xl text-yellow-500 mb-4"></i>
                                    <h3 class="text-xl font-semibold mb-2">No orders found</h3>
                                    <p class="text-gray-400 mb-4">You haven't placed any orders yet.</p>
                                    <a href="/products"
                                        class="inline-block bg-yellow-500 hover:bg-yellow-600 text-black font-bold py-2 px-6 rounded-lg transition-all duration-300">
                                        Start Shopping
                                    </a>
                                </div>
                                <% } else { %>

                                    <% orders.forEach(order=> { %>
                                        <div
                                            class="grid grid-cols-12 items-center gap-4 p-4 hover:bg-[#333232] transition-all duration-300 transform hover:-translate-y-0.5">
                                            <div class="col-span-3 md:col-span-2 font-mono text-yellow-400">#<%=
                                                    order.id %>
                                            </div>
                                            <div class="col-span-3 md:col-span-2 font-bold">$<%=
                                                    order.price.toLocaleString() %>
                                            </div>
                                            <div class="hidden md:block md:col-span-2 text-gray-300">
                                                <%= order.date %>
                                            </div>
                                            <div class="col-span-3 md:col-span-2">
                                                <span class="
                                                 <% if (order.status === 'Delivered') { %>
                                                     bg-green-500/90 animate-pulse text-white
                                                 <% } else if (order.status === 'Shipped') { %>
                                                     bg-blue-500 text-white
                                                 <% } else if (order.status === 'Processing') { %>
                                                     bg-purple-500 text-white
                                                 <% } else if (order.status === 'Pending') { %>
                                                     bg-yellow-500 text-black
                                                 <% } else if (order.status === 'Cancelled' || order.status === 'Returned') { %>
                                                     bg-red-500 text-white
                                                 <% } else { %>
                                                     bg-gray-500 text-white
                                                 <% } %>
                                                 px-3 py-1 rounded-full text-xs md:text-sm font-bold">
                                                    <%= order.status %>
                                                </span>
                                            </div>
                                            <div class="col-span-3 md:col-span-4">
                                                <div class="flex items-center gap-2">
                                                    <% order.items.slice(0, 2).forEach(item=> { %>
                                                        <div class="relative group">
                                                            <% if (item.image) { %>
                                                                <img src="<%= item.image %>" alt="<%= item.name %>"
                                                                    class="w-10 h-10 object-cover rounded border-2 border-yellow-500 transition-transform duration-300 group-hover:scale-110" />
                                                                <% } else { %>
                                                                    <div
                                                                        class="w-10 h-10 bg-gray-700 rounded border-2 border-yellow-500 flex items-center justify-center">
                                                                        <i class="fas fa-image text-gray-400"></i>
                                                                    </div>
                                                                    <% } %>
                                                                        <% if (item===order.items[0] &&
                                                                            order.items.length> 2) { %>
                                                                            <div
                                                                                class="absolute -bottom-1 -right-1 bg-yellow-500 rounded-full w-5 h-5 flex items-center justify-center text-xs font-bold">
                                                                                +<%= order.items.length - 2 %>
                                                                            </div>
                                                                            <% } %>
                                                        </div>
                                                        <% }); %>
                                                        <button
                                                                class="arrow-button ml-auto p-2 rounded-full bg-[#3a3838] hover:bg-yellow-500 hover:text-black transition-all duration-300">
                                                                <a href="/order-details?orderId=<%=order.id%>"><i class="fas fa-chevron-right text-sm"></i></a>
                                                            </button>
                                                </div>

                                            </div>
                                            <div class="col-span-12 md:hidden text-sm text-gray-400 mt-2">
                                                <%= order.mobileDate %>
                                            </div>
                                        </div>
                                        <% }); %>

                                            <% } %>
                        </div>

                        <div class="flex justify-between items-center mt-6 text-sm">
                            <% if (currentPage> 1) { %>
                                <a href="?page=<%= currentPage - 1 %>&limit=<%= limit %>"
                                    class="flex items-center gap-2 bg-[#2b2929] hover:bg-yellow-500 hover:text-black px-4 py-2 rounded-lg transition-all duration-300">
                                    <i class="fas fa-chevron-left"></i> Previous
                                </a>
                                <% } else { %>
                                    <span
                                        class="flex items-center gap-2 bg-[#2b2929] text-gray-500 px-4 py-2 rounded-lg cursor-not-allowed">
                                        <i class="fas fa-chevron-left"></i> Previous
                                    </span>
                                    <% } %>

                                        <div class="flex gap-2">
                                            <% for(let i=1; i <=Math.min(5, totalPages); i++) { %>
                                                <a href="?page=<%= i %>&limit=<%= limit %>"
                                                    class="w-8 h-8 rounded-full <%= currentPage === i ? 'bg-yellow-500 text-black font-bold' : 'bg-[#2b2929] hover:bg-yellow-500 hover:text-black' %> transition-all duration-300 flex items-center justify-center">
                                                    <%= i %>
                                                </a>
                                                <% } %>
                                                    <% if (totalPages> 5) { %>
                                                        <span class="flex items-center px-2">...</span>
                                                        <a href="?page=<%= totalPages %>&limit=<%= limit %>"
                                                            class="w-8 h-8 rounded-full bg-[#2b2929] hover:bg-yellow-500 hover:text-black transition-all duration-300 flex items-center justify-center">
                                                            <%= totalPages %>
                                                        </a>
                                                        <% } %>
                                        </div>

                                        <% if (currentPage < totalPages) { %>
                                            <a href="?page=<%= currentPage + 1 %>&limit=<%= limit %>"
                                                class="flex items-center gap-2 bg-[#2b2929] hover:bg-yellow-500 hover:text-black px-4 py-2 rounded-lg transition-all duration-300">
                                                Next <i class="fas fa-chevron-right"></i>
                                            </a>
                                            <% } else { %>
                                                <span
                                                    class="flex items-center gap-2 bg-[#2b2929] text-gray-500 px-4 py-2 rounded-lg cursor-not-allowed">
                                                    Next <i class="fas fa-chevron-right"></i>
                                                </span>
                                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </body>

    <%- include('../../views/partials/user/footer') %>