                </ul>
                
                <div class="mt-10 border-t border-[#333] pt-6">
                    <% if (!userDatas || Object.keys(userDatas).length===0) { %>
                        <a href="/login" class="block w-full bg-[#88903F] hover:bg-[#a0a84f] text-white py-2 px-4 rounded-lg text-center transition-colors">
                            Login
                        </a>
                    <% } else { %>
                        <a href="/logout" class="block w-full bg-[#333] hover:bg-[#444] text-white py-2 px-4 rounded-lg text-center transition-colors">
                            Logout
                        </a>
                    <% } %>
                </div>
            </div>
            <div class="flex-1 flex justify-center p-2 sm:p-4 lg:p-10">
                <div class="w-full max-w-6xl bg-[#1F1F1F] p-4 sm:p-6 rounded-lg border border-gray-700 shadow-2xl shadow-black/50">
                    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 sm:gap-0 mb-6">
                        <h2 class="text-xl sm:text-2xl font-bold text-[#88903F]">ORDER HISTORY</h2>
                        <form action="/orders" method="get" class="relative flex items-center gap-2 w-full sm:w-auto">
                            <div class="relative w-full sm:w-auto">
                                <input type="text" id="search" name="search" value="<%= search %>" placeholder="Search orders..."
                                    class="bg-[#2b2929] border border-gray-700 text-white rounded-lg pl-10 pr-4 py-2 w-full focus:outline-none focus:ring-1 focus:ring-[#88903F] focus:border-[#88903F]">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 absolute left-3 top-1/2 transform -translate-y-1/2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                                </svg>
                                <button type="submit" class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-white">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>

                            <% if (search) { %>
                                <a href="/orders"
                                   class="bg-red-600 hover:bg-red-700 text-white px-4 py-1 rounded-full text-sm transition duration-300">
                                    Clear
                                </a>
                            <% } %>
                        </form>
                    </div>

                    <div class="p-3 sm:p-4 lg:p-6 bg-[#1F1F1F] text-white">
                        <div class="hidden xl:block">
                            <div class="bg-gradient-to-r bg-[#88903F] text-black font-semibold rounded-t-lg overflow-hidden shadow-md">
                                <div class="grid grid-cols-12 items-center gap-2 sm:gap-4 p-3 sm:p-4 text-xs sm:text-sm md:text-base">
                                    <div class="col-span-2">Order ID</div>
                                    <div class="col-span-2">Amount</div>
                                    <div class="col-span-2">Date</div>
                                    <div class="col-span-3">Status</div>
                                    <div class="col-span-2">Payment</div>
                                    <div class="col-span-1">Actions</div>
                                </div>
                            </div>

                            <div class="bg-[#2b2929] divide-y divide-gray-700 rounded-b-lg shadow-lg overflow-hidden">
                                <% if (orders.length===0) { %>
                                    <div class="bg-[#2b2929] p-4 sm:p-8 text-center rounded-lg">
                                        <i class="fas fa-box-open text-3xl sm:text-4xl text-yellow-500 mb-3 sm:mb-4"></i>
                                        <h3 class="text-lg sm:text-xl font-semibold mb-2">No Orders Found</h3>
                                        <p class="text-gray-400 mb-4 sm:mb-6 text-sm sm:text-base">You haven't placed any orders yet.</p>
                                        <a href="/"
                                            class="bg-[#88903F] text-black px-4 sm:px-6 py-2 sm:py-3 rounded-lg font-semibold hover:bg-yellow-500 transition-colors duration-300 text-sm sm:text-base inline-block">
                                            Start Shopping
                                        </a>
                                    </div>
                                <% } else { %>
                                    <% orders.forEach(order=> { %>
                                        <div class="grid grid-cols-12 items-center gap-2 sm:gap-4 p-3 sm:p-4 hover:bg-[#333232] transition-colors">
                                            <div class="col-span-2 font-mono text-[#88903F] truncate">#<%= order.id %></div>
                                            <div class="col-span-2 font-bold truncate">₹<%= order.price.toLocaleString() %></div>
                                            <div class="col-span-2 text-gray-300"><%= order.date %></div>
                                            <div class="col-span-3">
                                                <span class="
                                                    <% if (order.status === 'Delivered') { %>
                                                        bg-green-500/90 animate-pulse text-white
                                                    <% } else if (order.status === 'Shipped') { %>
                                                        bg-blue-500 text-white
                                                    <% } else if (order.status === 'Processing') { %>
                                                        bg-purple-500 text-white
                                                    <% } else if (order.status === 'Pending') { %>
                                                        bg-yellow-500 text-black
                                                    <% } else if (order.status === 'Cancelled' || order.status === 'Returned') { %>
                                                        bg-red-500 text-white
                                                    <% } else if (order.status === 'Return Rejected') { %>
                                                        bg-red-500 text-white
                                                    <% } else if (order.status === 'Return Request') { %>
                                                        bg-yellow-500 text-black
                                                    <% } else { %>
                                                        bg-gray-500 text-white
                                                    <% } %>
                                                    px-2 sm:px-3 py-1 rounded-full text-xs font-bold whitespace-nowrap inline-block">
                                                    <%= order.status %>
                                                </span>
                                            </div>
                                            <div class="col-span-2">
                                                <% if (order.paymentMethod && order.paymentMethod === 'cod') { %>
                                                    <span class="inline-flex items-center text-gray-300">
                                                        <i class="fas fa-money-bill-wave mr-2 text-green-400"></i>
                                                        COD
                                                    </span>
                                                <% } else if (order.paymentMethod && order.paymentMethod === 'razorpay') { %>
                                                    <span class="inline-flex items-center text-gray-300">
                                                        <i class="fas fa-credit-card mr-2 text-blue-400"></i>
                                                        Razorpay
                                                    </span>
                                                <% } else if (order.paymentMethod && order.paymentMethod === 'wallet') { %>
                                                    <span class="inline-flex items-center text-gray-300">
                                                        <i class="fas fa-wallet mr-2 text-purple-400"></i>
                                                        Wallet
                                                    </span>
                                                <% } else { %>
                                                    <span class="inline-flex items-center text-gray-300">
                                                        <i class="fas fa-question-circle mr-2 text-gray-400"></i>
                                                        Online
                                                    </span>
                                                <% } %>
                                            </div>
                                            <div class="col-span-1">
                                                <a href="/order-details?orderId=<%=order.id%>" 
                                                    class="text-blue-400 hover:text-blue-300 transition-colors duration-200 p-2 rounded-full hover:bg-blue-900/30 group"
                                                    title="View">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </div>
                                        </div>
                                    <% }); %>
                                <% } %>
                            </div>
                        </div>

                        <div class="xl:hidden">
                            <% if (orders.length===0) { %>
                                <div class="bg-[#2b2929] p-8 text-center rounded-lg">
                                    <i class="fas fa-box-open text-4xl text-yellow-500 mb-4"></i>
                                    <h3 class="text-xl font-semibold mb-2">No Orders Found</h3>
                                    <p class="text-gray-400 mb-6">You haven't placed any orders yet.</p>
                                    <a href="/"
                                        class="bg-[#88903F] text-black px-6 py-3 rounded-lg font-semibold hover:bg-yellow-500 transition-colors duration-300 inline-block">
                                        Start Shopping
                                    </a>
                                </div>
                            <% } else { %>
                                <% orders.forEach(order=> { %>
                                    <div class="mobile-list-item">
                                        <div class="mobile-list-main">
                                            <div class="mobile-list-avatar">
                                                <span class="text-gray-300 font-medium">#<%= order.id.toString().slice(-4) %></span>
                                            </div>
                                            <div class="mobile-list-info">
                                                <div class="mobile-list-name">
                                                    <%= new Date(order.createdAt || order.date).toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                                                </div>
                                                <div class="mobile-list-meta">
                                                    <span class="mobile-list-amount text-green-400">₹<%= order.price.toFixed(2) %></span>
                                                    <span class="mobile-list-status 
                                                        <% if (order.status === 'Delivered') { %>
                                                            bg-green-500/90 text-white
                                                        <% } else if (order.status === 'Shipped') { %>
                                                            bg-blue-500 text-white
                                                        <% } else if (order.status === 'Processing') { %>
                                                            bg-purple-500 text-white
                                                        <% } else if (order.status === 'Pending') { %>
                                                            bg-yellow-500 text-black
                                                        <% } else if (order.status === 'Cancelled' || order.status === 'Returned') { %>
                                                            bg-red-500 text-white
                                                        <% } else if (order.status === 'Return Rejected') { %>
                                                            bg-red-500 text-white
                                                        <% } else if (order.status === 'Return Request') { %>
                                                            bg-yellow-500 text-black
                                                        <% } else { %>
                                                            bg-gray-500 text-white
                                                        <% } %>">
                                                        <%= order.status %>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <input type="checkbox" id="details-<%= order.id %>" class="mobile-details-toggle hidden">
                                        <label for="details-<%= order.id %>" class="mobile-details-label">
                                            <span class="text-gray-400 text-xs">More Details</span>
                                            <i class="fas fa-chevron-down text-gray-400"></i>
                                        </label>
                                        <div class="mobile-details-content">
                                            <div class="mobile-details-grid">
                                                <div class="mobile-details-item">
                                                    <label>Order ID</label>
                                                    <span class="text-gray-300">#<%= order.id %></span>
                                                </div>
                                                <div class="mobile-details-item">
                                                    <label>Date</label>
                                                    <span class="text-gray-400">
                                                        <%= new Date(order.createdAt || order.date).toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' }) %>
                                                    </span>
                                                </div>
                                                <div class="mobile-details-item">
                                                    <label>Payment</label>
                                                    <span class="text-gray-300">
                                                        <% if (order.paymentMethod && order.paymentMethod === 'cod') { %>
                                                            <span class="inline-flex items-center">
                                                                <i class="fas fa-money-bill-wave mr-2 text-green-400"></i>
                                                                Cash on Delivery
                                                            </span>
                                                        <% } else if (order.paymentMethod && order.paymentMethod === 'razorpay') { %>
                                                            <span class="inline-flex items-center">
                                                                <i class="fas fa-credit-card mr-2 text-blue-400"></i>
                                                                Razorpay
                                                            </span>
                                                        <% } else if (order.paymentMethod && order.paymentMethod === 'wallet') { %>
                                                            <span class="inline-flex items-center">
                                                                <i class="fas fa-wallet mr-2 text-purple-400"></i>
                                                                Wallet
                                                            </span>
                                                        <% } else { %>
                                                            <span class="inline-flex items-center">
                                                                <i class="fas fa-question-circle mr-2 text-gray-400"></i>
                                                                Online Payment
                                                            </span>
                                                        <% } %>
                                                    </span>
                                                </div>
                                                <div class="mobile-details-item">
                                                    <label>Items</label>
                                                    <span class="text-gray-400">
                                                        <%= order.items ? order.items.length : 0 %> item(s)
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mobile-list-actions">
                                            <a href="/order-details?orderId=<%=order.id%>" 
                                               class="mobile-list-action-btn text-blue-400 hover:text-blue-300" 
                                               title="View">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } %>
                        </div>

                        <div class="flex justify-between items-center mt-6 text-xs sm:text-sm pagination-container">
                            <% if (currentPage> 1) { %>
                                <a href="?page=<%= currentPage - 1 %>&limit=<%= limit %>"
                                    class="flex items-center gap-1 sm:gap-2 bg-[#2b2929] hover:bg-[#88903F] hover:text-black px-2 sm:px-4 py-2 rounded-lg transition-all duration-300 pagination-prev">
                                    <i class="fas fa-chevron-left"></i> Prev
                                </a>
                            <% } else { %>
                                <span class="flex items-center gap-1 sm:gap-2 bg-[#2b2929] text-gray-500 px-2 sm:px-4 py-2 rounded-lg cursor-not-allowed pagination-prev">
                                    <i class="fas fa-chevron-left"></i> Prev
                                </span>
                            <% } %>

                            <div class="flex gap-1 sm:gap-2 pagination-numbers">
                                <% for(let i=1; i <=Math.min(5, totalPages); i++) { %>
                                    <a href="?page=<%= i %>&limit=<%= limit %>"
                                        class="w-6 h-6 sm:w-8 sm:h-8 rounded-full <%= currentPage === i ? 'bg-[#88903F] text-black font-bold' : 'bg-[#2b2929] hover:bg-[#88903F] hover:text-black' %> transition-all duration-300 flex items-center justify-center">
                                        <%= i %>
                                    </a>
                                <% } %>
                                <% if (totalPages> 5) { %>
                                    <span class="flex items-center px-2">...</span>
                                    <a href="?page=<%= totalPages %>&limit=<%= limit %>"
                                        class="w-6 h-6 sm:w-8 sm:h-8 rounded-full bg-[#2b2929] hover:bg-[#88903F] hover:text-black transition-all duration-300 flex items-center justify-center">
                                        <%= totalPages %>
                                    </a>
                                <% } %>
                            </div>

                            <% if (currentPage < totalPages) { %>
                                <a href="?page=<%= currentPage + 1 %>&limit=<%= limit %>"
                                    class="flex items-center gap-1 sm:gap-2 bg-[#2b2929] hover:bg-[#88903F] hover:text-black px-2 sm:px-4 py-2 rounded-lg transition-all duration-300 pagination-next">
                                    Next <i class="fas fa-chevron-right"></i>
                                </a>
                            <% } else { %>
                                <span class="flex items-center gap-1 sm:gap-2 bg-[#2b2929] text-gray-500 px-2 sm:px-4 py-2 rounded-lg cursor-not-allowed pagination-next">
                                    Next <i class="fas fa-chevron-right"></i>
                                </span>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggleButton = document.getElementById('toggleSidebar');
            const sidebarMenu = document.getElementById('sidebarMenu');
            
            function checkMobile() {
                if (window.innerWidth < 1024) { 
                    sidebarMenu.classList.add('hidden');
                } else {
                    sidebarMenu.classList.remove('hidden');
                }
            }
            
            checkMobile();
            
            toggleButton.addEventListener('click', function() {
                sidebarMenu.classList.toggle('hidden');
            });
            
            window.addEventListener('resize', checkMobile);
        });
    </script>
