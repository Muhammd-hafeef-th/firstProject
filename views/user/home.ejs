                    <div class="absolute inset-0 bg-gradient-to-r from-[#E8B888] to-amber-600 rounded-xl opacity-0 group-hover:opacity-20 transition-all duration-300 blur-sm"></div>
                    <div class="relative overflow-hidden rounded-xl bg-[#222] border border-gray-800 group-hover:border-[#E8B888]/30 p-6 transition-all duration-300 hover:shadow-[0_8px_30px_rgb(232,184,136,0.15)] flex flex-col items-center justify-center h-32">
                        <h3 class="text-xl font-bold text-white group-hover:text-[#E8B888] transition-colors duration-300"><%= brand.brandName %></h3>
                        
                        <div class="absolute -bottom-1 left-0 right-0 h-1 bg-gradient-to-r from-[#E8B888] to-amber-600 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300 origin-left"></div>
                        
                        <div class="mt-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            <span class="inline-flex items-center text-sm text-[#E8B888]">
                                Explore Collection
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transform transition-transform duration-300 group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                                </svg>
                            </span>
                        </div>
                    </div>
                </a>
                <% }) %>
            </div>
        </div>
    </section>

    <section class="py-20 bg-[#1F1F1F]">
        <div class="container mx-auto px-6">
            <div class="text-center mb-16" data-aos="fade-up">
                <div class="w-16 h-1 bg-[#E8B888] mx-auto mb-4"></div>
                <h2 class="text-3xl font-bold">NEW ARRIVALS</h2>
                <p class="text-gray-400 mt-3 max-w-2xl mx-auto">Discover our latest collection of premium timepieces, crafted with exceptional quality</p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8" data-aos="fade-up" data-aos-delay="100">
                <% newArrival.forEach(watch=> { %>
                <div class="relative group">
                    <div class="absolute -inset-1 bg-gradient-to-r from-[#E8B888] to-amber-600 rounded-lg blur opacity-25 group-hover:opacity-50 transition duration-500"></div>
                    
                    <div class="bg-[#1A1A1A] relative rounded-xl overflow-hidden transform transition-all duration-500 hover:-translate-y-2 hover:shadow-[0_10px_40px_-15px_rgba(232,184,136,0.5)]">
                        <div class="absolute top-0 right-0 z-10">
                            <div class="bg-[#E8B888] text-black font-bold py-1 px-4 rounded-bl-lg shadow-md transform rotate-0 hover:rotate-3 transition-all duration-300">NEW</div>
                        </div>
                        
                        <a href="/productDetails?id=<%= watch._id %>" class="block">
                            <div class="relative overflow-hidden h-64">
                                <img src="<%= watch.productImage[0] %>" alt="<%= watch.productName %>" 
                                    class="w-full h-full object-contain p-6 transition-all duration-700 group-hover:scale-110">
                            </div>
                        </a>
                        
                        <div class="p-6 bg-gradient-to-b from-[#1A1A1A]/0 to-[#1A1A1A]">
                            <h3 class="text-xl font-semibold mb-3 text-white group-hover:text-[#E8B888] transition-colors duration-300">
                                <%= watch.productName %>
                            </h3>
                            
                            <div class="flex items-center justify-between mb-5">
                                <div class="flex flex-col">
                                    <span class="text-[#E8B888] text-2xl font-bold">₹<%= watch.salesPrice %></span>
                                    <span class="text-gray-400 text-sm line-through">₹<%= watch.regularPrice %></span>
                                </div>
                                
                                <div class="bg-black border border-[#E8B888]/50 text-[#E8B888] px-3 py-1.5 rounded shadow-md relative overflow-hidden group-hover:bg-[#E8B888] group-hover:text-black transition-all duration-500">
                                    <span class="relative z-10 font-bold text-sm"><%= watch.newOffer %>% OFF</span>
                                    <div class="absolute inset-0 bg-gradient-to-r from-[#E8B888]/0 to-[#E8B888]/20 transform -skew-x-12 group-hover:skew-x-12 transition-all duration-700"></div>
                                </div>
                            </div>
                            
                            <button onclick="addToCart('<%= watch._id %>')" 
                                class="relative w-full overflow-hidden bg-gradient-to-r from-[#2A2A2A] to-[#1E1E1E] text-white py-3 rounded-lg text-center font-medium group">
                                <span class="relative z-10 group-hover:text-black transition-colors duration-500">ADD TO CART</span>
                                <div class="absolute inset-0 w-0 bg-gradient-to-r from-[#E8B888] to-amber-600 transition-all duration-300 group-hover:w-full"></div>
                            </button>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
            
            <div class="text-center mt-12" data-aos="fade-up">
                <a href="/newArrivals" class="group relative inline-flex items-center justify-center px-8 py-3 overflow-hidden transition-all duration-300 rounded-lg">
                    <span class="absolute inset-0 w-full h-full border-2 border-[#E8B888] rounded-lg"></span>
                    <span class="absolute inset-0 bg-gradient-to-r from-[#E8B888] to-amber-600 rounded-lg opacity-0 group-hover:opacity-100 transition-all duration-300"></span>
                    <span class="relative flex items-center justify-center space-x-2 text-[#E8B888] group-hover:text-black transition-colors duration-300">
                        <span>Discover New Arrivals</span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transform transition-transform duration-300 group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </span>
                </a>
            </div>
        </div>
    </section>

    <script>
        AOS.init({
            duration: 800,
            once: true
        });

        document.addEventListener('DOMContentLoaded', () => {
            const toast = document.getElementById('toast');
            const toastMessage = document.getElementById('toast-message');
            const toastClose = document.getElementById('toast-close');

            <% if (messages) { %>
                toastMessage.textContent = '<%= messages %>';
                toast.classList.add('show');
                setTimeout(() => {
                    toast.classList.remove('show');
                }, 5000);
            <% } %>

            toastClose.addEventListener('click', () => {
                toast.classList.remove('show');
            });
        });
    </script>
</body>

