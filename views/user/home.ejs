<%- include('../../views/partials/user/header') %>
<script>
    window.history.pushState(null, null, window.location.href);
    window.onpopstate = function () {
        window.history.go(1);
    };
</script>

<script src="https://cdn.tailwindcss.com"></script>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

<style>
    @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }
    .animate-float {
        animation: float 3s ease-in-out infinite;
    }
    .gradient-text {
        background: linear-gradient(90deg, #EFBE8A, #D4A373);
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }
    .card-hover {
        transition: all 0.3s ease;
    }
    .card-hover:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }
</style>

<body class="bg-[#1A1A1A] text-white">
    <section class="relative overflow-hidden">
        <div class="container mx-auto px-6 py-16 md:py-24 flex flex-col md:flex-row items-center">
            <div class="md:w-1/2 space-y-6 z-10" data-aos="fade-right">
                <h1 class="text-4xl md:text-6xl font-bold leading-tight">
                    NEW WATCH <br> 
                    <span class="gradient-text">COLLECTIONS B720</span>
                </h1>
                <p class="text-gray-400 text-lg md:text-xl max-w-md">
                    Latest arrival of the new imported watches with modern and resistant design.
                </p>
                <p class="text-[#EFBE8A] text-3xl md:text-4xl font-semibold">$1245</p>
                <div class="flex flex-wrap gap-4">
                    <button class="bg-gray-800 hover:bg-gray-700 text-white px-8 py-3 rounded-lg text-lg transition-all duration-300 transform hover:-translate-y-1">
                        Discover
                    </button>
                    <button class="bg-[#EFBE8A] hover:bg-[#D4A373] text-black px-8 py-3 rounded-lg text-lg transition-all duration-300 transform hover:-translate-y-1">
                        ADD TO CART
                    </button>
                </div>
            </div>
            
            <div class="md:w-1/2 mt-12 md:mt-0 relative" data-aos="fade-left">
                <div class="absolute -top-20 -right-20 w-64 h-64 bg-[#EFBE8A] opacity-20 rounded-full filter blur-3xl"></div>
                <div class="bg-[#EFBE8A] p-8 rounded-2xl shadow-2xl transform  hover:rotate-0 transition duration-500">
                    <img src="/images/titan 4-Photoroom.png" alt="Watch" class="w-full max-w-md mx-auto animate-float">
                </div>
            </div>
        </div>
    </section>

    <section class="py-16 px-6">
        <div class="container mx-auto">
            <h2 class="text-3xl font-bold text-center mb-12" data-aos="fade-up">Shop By Category</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8" data-aos="fade-up" data-aos-delay="100">
                <% ['/images/image.png', '/images/image copy.png', '/images/image copy 2.png'].forEach((img, index) => { %>
                <div class="relative overflow-hidden rounded-xl group h-64">
                    <a href="<%= ['/mensWatch', '/ladiesWatch', '/couplesWatch'][index] %>">
                        <img src="<%= img %>" alt="Category" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
                        <div class="absolute inset-0 bg-black bg-opacity-30 flex items-end p-6 transition-all duration-500 group-hover:bg-opacity-20">
                            <h3 class="text-white text-2xl font-bold"><%= ['Men\'s Watch', 'Ladies Watch', 'Couple\'s Watch'][index] %></h3>
                        </div>
                    </a>
                </div>
                <% }) %>
            </div>
        </div>
    </section>

    <section class="py-20 bg-[#1F1F1F]">
        <div class="container mx-auto px-6">
            <div class="text-center mb-16" data-aos="fade-up">
                <div class="w-16 h-1 bg-[#E8B888] mx-auto mb-4"></div>
                <h2 class="text-3xl font-bold">FEATURED PRODUCTS</h2>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" data-aos="fade-up" data-aos-delay="100">
                <% featured.forEach(watch=> { %>
                <div class="bg-[#2A2A2A] rounded-xl overflow-hidden card-hover">
                    <div class="relative">
                        <span class="absolute top-4 left-4 bg-[#E8B888] text-black px-3 py-1 rounded-full text-sm font-bold">SALE</span>
                        <a href="/productDetails?id=<%= watch._id %>">
                            <img src="<%= watch.productImage[0] %>" alt="<%= watch.productName %>" 
                                class="w-full h-64 object-contain p-6 transition-transform duration-500 hover:scale-105">
                        </a>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-semibold mb-2"><%= watch.productName %></h3>
                        <p class="text-[#E8B888] text-xl font-bold mb-4">$<%= watch.regularPrice %></p>
                        <a href="/addtoCart?id=<%= watch._id %>" class="block w-full bg-[#3A3A3A] hover:bg-[#E8B888] hover:text-black text-white text-center py-3 rounded-lg transition-all duration-300">
                            ADD TO CART
                        </a>
                    </div>
                </div>
                <% }) %>
            </div>
            
            <div class="text-center mt-12" data-aos="fade-up">
                <a href="/featured" class="inline-block border-2 border-[#E8B888] text-[#E8B888] hover:bg-[#E8B888] hover:text-black px-8 py-3 rounded-lg transition-all duration-300 transform hover:-translate-y-1">
                    Show More →
                </a>
            </div>
        </div>
    </section>

    <section class="py-20 bg-[#1A1A1A]">
        <div class="container mx-auto px-6 flex flex-col md:flex-row items-center">
            <div class="md:w-1/2 mb-12 md:mb-0 relative" data-aos="fade-right">
                <div class="absolute -bottom-8 -left-8 w-64 h-64 bg-[#E8B888] opacity-20 rounded-full filter blur-3xl"></div>
                <div class="relative z-10">
                    <img src="/images/ethos ladies 3-Photoroom.png" alt="Luxury Watch" class="w-full max-w-md mx-auto rounded-lg shadow-2xl">
                </div>
            </div>
            
            <div class="md:w-1/2 md:pl-16" data-aos="fade-left">
                <div class="mb-6">
                    <div class="w-16 h-1 bg-[#E8B888] mb-4"></div>
                    <p class="text-[#E8B888] uppercase tracking-widest">OUR STORY</p>
                </div>
                <h2 class="text-3xl md:text-4xl font-bold mb-6">Inspirational Watch of this year</h2>
                <p class="text-gray-400 mb-8 text-lg leading-relaxed">
                    The latest and modern watches of this year are available in various presentations in this store. Discover them now.
                </p>
                <button class="px-8 py-3 bg-[#3A3A3A] hover:bg-[#E8B888] hover:text-black rounded-lg transition-all duration-300 transform hover:-translate-y-1">
                    Discover
                </button>
            </div>
        </div>
    </section>

    <section class="py-20 bg-[#1F1F1F]">
        <div class="container mx-auto px-6">
            <div class="text-center mb-16" data-aos="fade-up">
                <div class="w-16 h-1 bg-[#E8B888] mx-auto mb-4"></div>
                <h2 class="text-3xl font-bold">OUR PRODUCTS</h2>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" data-aos="fade-up" data-aos-delay="100">
                <% products.forEach(watch=> { %>
                <div class="bg-[#2A2A2A] rounded-xl overflow-hidden card-hover">
                    <a href="/productDetails?id=<%= watch._id %>">
                        <img src="<%= watch.productImage[0] %>" alt="<%= watch.productName %>" 
                            class="w-full h-64 object-contain p-6 transition-transform duration-500 hover:scale-105">
                    </a>
                    <div class="p-6">
                        <h3 class="text-xl font-semibold mb-2"><%= watch.productName %></h3>
                        <p class="text-[#E8B888] text-xl font-bold mb-4">$<%= watch.regularPrice %></p>
                        <a href="/addtoCart?id=<%= watch._id %>" class="block w-full bg-[#3A3A3A] hover:bg-[#E8B888] hover:text-black text-white text-center py-3 rounded-lg transition-all duration-300">
                            ADD TO CART
                        </a>
                    </div>
                </div>
                <% }) %>
            </div>
            
            <div class="text-center mt-12" data-aos="fade-up">
                <a href="/products" class="inline-block border-2 border-[#E8B888] text-[#E8B888] hover:bg-[#E8B888] hover:text-black px-8 py-3 rounded-lg transition-all duration-300 transform hover:-translate-y-1">
                    Show More →
                </a>
            </div>
        </div>
    </section>

    <section class="py-20 bg-[#1A1A1A]">
        <div class="container mx-auto px-6">
            <div class="text-center mb-16" data-aos="fade-up">
                <div class="w-16 h-1 bg-[#E8B888] mx-auto mb-4"></div>
                <h2 class="text-3xl font-bold">OUR BRANDS</h2>
            </div>
            
            <div class="flex flex-wrap justify-center gap-4" data-aos="fade-up" data-aos-delay="100">
                <% brands.forEach(brand => { %>
                <a href="/brandButton?id=<%= brand._id %>" class="border border-gray-700 hover:border-[#E8B888] text-white hover:text-[#E8B888] px-6 py-3 rounded-full transition-all duration-300 transform hover:-translate-y-1">
                    <%= brand.brandName %>
                </a>
                <% }) %>
            </div>
        </div>
    </section>

    <section class="py-20 bg-[#1F1F1F]">
        <div class="container mx-auto px-6">
            <div class="text-center mb-16" data-aos="fade-up">
                <div class="w-16 h-1 bg-[#E8B888] mx-auto mb-4"></div>
                <h2 class="text-3xl font-bold">NEW ARRIVALS</h2>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8" data-aos="fade-up" data-aos-delay="100">
                <% newArrival.forEach(watch=> { %>
                <div class="bg-[#E8B888] rounded-xl overflow-hidden card-hover">
                    <div class="relative">
                        <span class="absolute top-4 right-4 bg-black text-white text-xs px-2 py-1 rounded-full">NEW</span>
                        <a href="/productDetails?id=<%= watch._id %>">
                            <img src="<%= watch.productImage[0] %>" alt="<%= watch.productName %>" 
                                class="w-full h-64 object-contain p-6 transition-transform duration-500 hover:scale-105">
                        </a>
                    </div>
                    <div class="p-6">
                        <h3 class="text-black text-xl font-semibold mb-2"><%= watch.productName %></h3>
                        <p class="text-black text-xl font-bold mb-4">$<%= watch.regularPrice %></p>
                        <a href="/addtoCart?id=<%= watch._id %>" class="block w-full bg-[#3A3A3A] hover:bg-black text-white text-center py-3 rounded-lg transition-all duration-300">
                            ADD TO CART
                        </a>
                    </div>
                </div>
                <% }) %>
            </div>
            
            <div class="text-center mt-12" data-aos="fade-up">
                <a href="/newArrivals" class="inline-block border-2 border-[#E8B888] text-[#E8B888] hover:bg-[#E8B888] hover:text-black px-8 py-3 rounded-lg transition-all duration-300 transform hover:-translate-y-1">
                    Show More →
                </a>
            </div>
        </div>
    </section>

    <script>
        AOS.init({
            duration: 800,
            once: true
        });
    </script>
</body>

<%- include('../../views/partials/user/footer') %>