<%- include('../../views/partials/user/header')%>
    <script src="https://cdn.tailwindcss.com"></script>
    <section class="bg-[#1F1F1F] py-12 ">
        <div class="container mx-auto text-center">
            <div class="w-16 h-[2px] bg-[#E8B888] mx-auto mb-2"></div>
            <h2 class="text-white text-2xl font-sans mb-20">FEATURED</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:m-10">
                <% featured.forEach(watch=> { %>
                    <div class="bg-[#2A2A2A] p-6 rounded-lg relative">
                        <span
                            class="absolute left-0 top-4 bg-[#E8B888] text-black px-3 py-1 font-semibold text-sm">SALE</span>
                        <a href="/productDetails?id=<%= watch._id %>">
                            <img src="<%= watch.productImage[0] %>" alt="<%= watch.productName %>"
                                class="mx-auto w-64 h-64 object-contain transition-transform duration-300 ease-in-out hover:scale-110">

                        </a>
                        <h3 class="text-white text-lg font-semibold mt-4">
                            <%= watch.productName %>
                        </h3>
                        <p class="text-[#E8B888] text-xl font-semibold">$
                            <%= watch.regularPrice %>
                        </p>
                        <a href="/addtoCart?id=<%= watch._id %>">
                            <button class="bg-[#3A3A3A] text-white px-4 py-2 mt-4 w-full">ADD TO CART</button>
                        </a>
                    </div>
                    <% }) %>

            </div>
        </div>

        <!-- Pagination -->
        <% if (totalPages> 1) { %>
            <div class="flex justify-center mt-8 pb-10">
                <div class="flex items-center gap-2">
                    <% if (currentPage> 1) { %>
                        <a href="/featured?page=<%= currentPage - 1 %>"
                            class="px-4 py-2 bg-[#3A3A3A] text-white rounded-md hover:bg-white hover:text-black transition">
                            ←
                        </a>
                        <% } %>

                            <% for (let i=1; i <=totalPages; i++) { %>
                                <a href="/featured?page=<%= i %>"
                                    class="px-4 py-2 rounded-md <%= currentPage === i ? 'bg-[#E8B888] text-black' : 'bg-[#3A3A3A] text-white' %> hover:bg-[#E8B888] hover:text-black transition">
                                    <%= i %>
                                </a>
                                <% } %>

                                    <% if (currentPage < totalPages) { %>
                                        <a href="/featured?page=<%= currentPage + 1 %>"
                                            class="px-4 py-2 bg-[#3A3A3A] text-white rounded-md hover:bg-white hover:text-black transition">
                                            →
                                        </a>
                                        <% } %>
                </div>
            </div>
            <% } %>
    </section>







    <%- include('../../views/partials/user/footer')%>