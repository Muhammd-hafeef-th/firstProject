<%- include('../../views/partials/user/header')%>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    
    <section class="bg-gradient-to-b bg-[#1A1A1A] py-16 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
            <div class="text-center mb-16">
                <div class="w-16 h-1 bg-gradient-to-r from-[#E8B888] to-amber-600 mx-auto mb-4 animate-[grow_0.6s_ease-in-out]"></div>
                <h2 class="text-3xl sm:text-4xl font-bold text-white mb-2 font-serif tracking-wide animate-[fadeIn_0.8s_ease-in-out]">
                    <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#E8B888] to-amber-200">
                        FEATURED COLLECTION
                    </span>
                </h2>
                <p class="text-gray-400 max-w-2xl mx-auto animate-[fadeIn_1s_ease-in-out]">
                    Discover our exquisite selection of premium timepieces, crafted with precision and elegance.
                </p>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
                <% featured.forEach(watch=> { %>
                    <div class="group relative bg-gradient-to-b from-[#2A2A2A] to-[#1E1E1E] p-6 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 overflow-hidden">
                        <span class="absolute left-4 top-4 bg-gradient-to-r from-[#E8B888] to-amber-600 text-black px-3 py-1 font-bold text-xs rounded-full z-10 animate-[pulse_2s_infinite]">
                            SALE
                        </span>
                        
                        <div class="relative h-64 overflow-hidden rounded-lg mb-4">
                            <a href="/productDetails?id=<%= watch._id %>" class="block h-full">
                                <img src="<%= watch.productImage[0] %>" alt="<%= watch.productName %>"
                                    class="w-full h-full object-contain transition-all duration-700 group-hover:opacity-0 group-hover:scale-90 absolute inset-0">
                                
                                <% if (watch.productImage[1]) { %>
                                    <img src="<%= watch.productImage[1] %>" alt="<%= watch.productName %> - Alternate View"
                                        class="w-full h-full object-contain transition-all duration-700 opacity-0 group-hover:opacity-100 group-hover:scale-105 absolute inset-0">
                                <% } else { %>
                                    <img src="<%= watch.productImage[0] %>" alt="<%= watch.productName %>"
                                        class="w-full h-full object-contain transition-all duration-700 opacity-0 group-hover:opacity-100 group-hover:scale-105 absolute inset-0">
                                <% } %>
                            </a>
                            
                            <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/80 to-transparent p-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                                <a href="/productDetails?id=<%= watch._id %>" 
                                   class="block text-center text-white text-sm font-medium py-2 hover:text-[#E8B888] transition-colors">
                                    QUICK VIEW
                                </a>
                            </div>
                        </div>
                        
                        <div class="relative z-10">
                            <h3 class="text-white text-lg font-medium mb-1 group-hover:text-[#E8B888] transition-colors">
                                <%= watch.productName %>
                            </h3>
                            
                            <div class="flex items-center justify-between">
                                <p class="text-[#E8B888] text-xl font-bold">
                                    $<%= watch.regularPrice %>
                                </p>
                                
                                <% if (watch.discountPrice) { %>
                                    <p class="text-gray-400 text-sm line-through">
                                        $<%= watch.discountPrice %>
                                    </p>
                                <% } %>
                            </div>
                            
                            <div class="mt-6">
                                <a href="/addtoCart?id=<%= watch._id %>" 
                                   class="block w-full bg-gradient-to-r from-[#3A3A3A] to-[#2A2A2A] text-white py-3 rounded-lg text-center font-medium 
                                          transition-all duration-300 hover:from-[#E8B888] hover:to-amber-600 hover:text-black hover:shadow-lg
                                          transform hover:-translate-y-0.5">
                                    ADD TO CART
                                </a>
                            </div>
                        </div>
                        
                        <div class="absolute -bottom-10 -right-10 w-20 h-20 rounded-full bg-[#E8B888]/10 group-hover:bg-[#E8B888]/20 transition-all duration-700"></div>
                        <div class="absolute -top-5 -left-5 w-16 h-16 rounded-full bg-[#E8B888]/5 group-hover:bg-[#E8B888]/10 transition-all duration-1000"></div>
                    </div>
                <% }) %>
            </div>

            <% if (totalPages> 1) { %>
                <div class="flex justify-center mt-16 pb-10 animate-[fadeIn_1.2s_ease-in-out]">
                    <div class="flex items-center gap-1 sm:gap-2">
                        <% if (currentPage> 1) { %>
                            <a href="/featured?page=<%= currentPage - 1 %>"
                                class="px-3 sm:px-4 py-2 bg-[#3A3A3A] text-white rounded-md hover:bg-[#E8B888] hover:text-black transition-all duration-300 flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                                </svg>
                                Prev
                            </a>
                        <% } %>

                        <a href="/featured?page=1"
                            class="px-3 sm:px-4 py-2 rounded-md <%= currentPage === 1 ? 'bg-[#E8B888] text-black font-bold' : 'bg-[#3A3A3A] text-white' %> hover:bg-[#E8B888]/80 hover:text-black transition-all duration-300 hidden sm:block">
                            1
                        </a>

                        <% if (currentPage > 3 && totalPages > 5) { %>
                            <span class="px-2 text-gray-400">...</span>
                        <% } %>

                        <% for (let i = Math.max(2, currentPage - 1); i <= Math.min(totalPages - 1, currentPage + 1); i++) { %>
                            <% if (i !== 1 && i !== totalPages) { %>
                                <a href="/featured?page=<%= i %>"
                                    class="px-3 sm:px-4 py-2 rounded-md <%= currentPage === i ? 'bg-[#E8B888] text-black font-bold' : 'bg-[#3A3A3A] text-white' %> hover:bg-[#E8B888]/80 hover:text-black transition-all duration-300">
                                    <%= i %>
                                </a>
                            <% } %>
                        <% } %>

                        <% if (currentPage < totalPages - 2 && totalPages > 5) { %>
                            <span class="px-2 text-gray-400">...</span>
                        <% } %>

                        <% if (totalPages > 1) { %>
                            <a href="/featured?page=<%= totalPages %>"
                                class="px-3 sm:px-4 py-2 rounded-md <%= currentPage === totalPages ? 'bg-[#E8B888] text-black font-bold' : 'bg-[#3A3A3A] text-white' %> hover:bg-[#E8B888]/80 hover:text-black transition-all duration-300 hidden sm:block">
                                <%= totalPages %>
                            </a>
                        <% } %>

                        <% if (currentPage < totalPages) { %>
                            <a href="/featured?page=<%= currentPage + 1 %>"
                                class="px-3 sm:px-4 py-2 bg-[#3A3A3A] text-white rounded-md hover:bg-[#E8B888] hover:text-black transition-all duration-300 flex items-center">
                                Next
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </a>
                        <% } %>
                    </div>
                </div>
            <% } %>
        </div>
    </section>

    <div id="loading-animation" class="fixed inset-0 bg-black/80 flex items-center justify-center z-50 hidden">
        <div class="text-center">
            <lottie-player src="https://assets5.lottiefiles.com/packages/lf20_usmfx6bp.json" background="transparent" speed="1" style="width: 200px; height: 200px;" loop autoplay></lottie-player>
            <p class="text-white mt-4 font-medium">Loading Your Luxury Timepieces...</p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const links = document.querySelectorAll('a[href^="/featured"]');
            
            links.forEach(link => {
                link.addEventListener('click', (e) => {
                    if (link.getAttribute('href') !== '#') {
                        document.getElementById('loading-animation').classList.remove('hidden');
                    }
                });
            });
            
            window.addEventListener('load', () => {
                setTimeout(() => {
                    document.getElementById('loading-animation').classList.add('hidden');
                }, 500);
            });
        });
    </script>

    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        @keyframes grow {
            from { transform: scaleX(0); }
            to { transform: scaleX(1); }
        }
        
        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }
        
        .animate-\[fadeIn_0\.8s_ease-in-out\] {
            animation: fadeIn 0.8s ease-in-out;
        }
        
        .animate-\[fadeIn_1s_ease-in-out\] {
            animation: fadeIn 1s ease-in-out;
        }
        
        .animate-\[fadeIn_1\.2s_ease-in-out\] {
            animation: fadeIn 1.2s ease-in-out;
        }
        
        .animate-\[grow_0\.6s_ease-in-out\] {
            animation: grow 0.6s ease-in-out;
            transform-origin: center;
        }
        
        .animate-\[pulse_2s_infinite\] {
            animation: pulse 2s infinite;
        }
        
        ::-webkit-scrollbar {
            width: 8px;
        }
        
        ::-webkit-scrollbar-track {
            background: #1F1F1F;
        }
        
        ::-webkit-scrollbar-thumb {
            background: #E8B888;
            border-radius: 4px;
        }
        
        ::-webkit-scrollbar-thumb:hover {
            background: #c99d66;
        }
    </style>

    <%- include('../../views/partials/user/footer')%>