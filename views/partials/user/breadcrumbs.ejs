<!-- Breadcrumbs Component -->
<nav aria-label="Breadcrumb" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3 bg-[#252525] border-b border-gray-800 shadow-sm">
    <ol class="flex flex-wrap items-center space-x-1 text-sm">
        <li>
            <a href="/" class="flex items-center text-gray-300 hover:text-[#FFB568] transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
            </a>
        </li>
        
        <% if (typeof breadcrumbs !== 'undefined' && breadcrumbs.length > 0) { %>
            <% breadcrumbs.forEach((item, index) => { %>
                <li class="flex items-center">
                    <span class="text-gray-500 mx-1">/</span>
                    <% if (index === breadcrumbs.length - 1) { %>
                        <span class="text-[#FFB568] font-medium"><%= item.label %></span>
                    <% } else { %>
                        <a href="<%= item.url %>" class="text-gray-300 hover:text-[#FFB568] transition-colors"><%= item.label %></a>
                    <% } %>
                </li>
            <% }); %>
        <% } %>
    </ol>
</nav>
