<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-900 text-white">

    <!-- Navbar -->
    <%- include('../../views/partials/admin/navbar')%>

        <div class="flex">
            <!-- Sidebar -->
            <%- include('../../views/partials/admin/sidebar')%>

                <!-- Content -->
                <div class="bg-gray-900 text-white p-6">
                    <div class="flex justify-between items-center mb-4">
                        <h1 class="text-2xl font-bold">Products</h1>
                        <a href="/admin/add-product"
                            class="bg-green-500 text-black px-4 py-2 rounded-lg hover:bg-green-600">
                            ADD PRODUCT +
                        </a>
                    </div>

                    <!-- Table Container -->
                    <div class="bg-gray-800 p-4 rounded-lg shadow-lg overflow-x-auto">
                        <table class="w-full text-sm border-collapse">
                            <thead class="bg-gray-700">
                                <tr>
                                    <th class="p-3">ID</th>
                                    <th class="p-3">Product Image</th>
                                    <th class="p-3">Product Name</th>
                                    <th class="p-3">Brand</th>
                                    <th class="p-3">Price</th>
                                    <th class="p-3">Status</th>
                                    <th class="p-3">Amount</th>
                                    <th class="p-3">Last Updated</th>
                                    <th class="p-3">Color Available</th>
                                    <th class="p-3">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% product.forEach((product)=> { %>
                                    <tr class="border-b border-gray-600">
                                        <td class="p-3">#<%= product.id %>
                                        </td>
                                        <td class="p-3">
                                            <img src="<%= product.image %>" alt="Product" class="w-12 h-12 rounded-lg">
                                        </td>
                                        <td class="p-3 font-bold">
                                            <%= product.name %>
                                        </td>
                                        <td class="p-3">
                                            <%= product.brand %>
                                        </td>
                                        <td class="p-3">
                                            <%= product.piece %>
                                        </td>
                                        <td class="p-3 text-green-400 text-lg">‚úî</td>
                                        <td class="p-3">$<%= product.amount %>
                                        </td>
                                        <td class="p-3">
                                            <%= product.lastUpdated %>
                                        </td>
                                        <td class="p-3 flex gap-2">
                                            <% product.colors.forEach(color=> { %>
                                                <span class="w-4 h-4 rounded-full"
                                                    style="background-color: <%= color %>;"></span>
                                                <% }) %>
                                        </td>
                                        <td class="p-3 flex gap-2">
                                            <a href="/admin/edit-product?id=<%= product.id %>"
                                                class="text-gray-400 hover:text-white text-lg">‚úèÔ∏è</a>
                                            <a href="#" onclick="openDeleteModal('<%= product.id %>')"
                                                class="text-gray-400 hover:text-white text-lg">üóëÔ∏è</a>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>

                        <!-- Pagination -->
                        <div class="flex flex-wrap justify-center mt-4 gap-2">
                            <% for(let i = 1; i <= totalPages; i++) { %>
                                <a href="?page=<%= i %>"
                                   class="px-3 py-1 rounded-md <%= i === currentPage ? 'bg-purple-500 text-white' : 'bg-gray-700 text-white hover:bg-gray-600' %>">
                                    <%= i %>
                                </a>
                            <% } %>
                        </div>
                    </div>

                    <!-- Delete Confirmation Modal -->
                    <div id="deleteModal"
                        class="fixed inset-0 bg-black bg-opacity-50 hidden flex justify-center items-center">
                        <div class="bg-gray-800 p-6 rounded-lg shadow-lg w-96">
                            <h2 class="text-xl font-bold text-white mb-4">Confirm Delete</h2>
                            <p class="text-gray-300 mb-4">Are you sure you want to delete this product?</p>

                            <div class="flex justify-end space-x-4">
                                <button onclick="closeDeleteModal()"
                                    class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600">
                                    Cancel
                                </button>
                                <button id="confirmDeleteBtn"
                                    class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600">
                                    Delete
                                </button>
                            </div>
                        </div>
                    </div>



                </div>
        </div>

        <script>
            const menuBtn = document.getElementById('menu-btn');
            const sidebar = document.getElementById('sidebar');

            menuBtn.addEventListener('click', () => {
                sidebar.classList.toggle('-translate-x-full');
            });

            function openDeleteModal(productId) {
                document.getElementById("deleteModal").classList.remove("hidden");
                document.getElementById("confirmDeleteBtn").onclick = function () {
                    window.location.href = "/admin/delete-product?id=" + productId;
                };
            }

            function closeDeleteModal() {
                document.getElementById("deleteModal").classList.add("hidden");
            }
        </script>

</body>

</html>