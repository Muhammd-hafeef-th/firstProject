<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <title>Product Management</title>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#6d28d9',
                        secondary: '#E8B888',
                        dark: '#111827',
                        darker: '#0d1321',
                        light: '#f3f4f6',
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-gradient-to-br from-darker to-dark text-gray-100 min-h-screen">

    <!-- Navbar -->
    <%- include('../../views/partials/admin/navbar')%>

    <div class="flex">
        <!-- Sidebar -->
        <%- include('../../views/partials/admin/sidebar')%>

        <!-- Main Content -->
        <div class="flex-1 p-6 ml-0 transition-all duration-300">
            <div class="max-w-7xl mx-auto">
                <!-- Header Section -->
                <div class="mb-10">
                    <div class="flex flex-col md:flex-row justify-between items-start md:items-center">
                        <div class="relative">
                            <div class="absolute -left-4 -top-4 w-20 h-10 bg-secondary/10 rounded-full blur-md"></div>
                            <h1 class="text-3xl font-bold text-white mb-2 relative">Product Management</h1>
                            <div class="w-20 h-1 bg-gradient-to-r from-secondary to-primary mb-3"></div>
                            <p class="text-gray-400">Manage all your premium timepieces in one place</p>
                        </div>
                        <a href="/admin/add-product" class="bg-gradient-to-r from-purple-600 to-primary hover:from-purple-700 hover:to-primary-dark text-white px-6 py-3 rounded-lg font-semibold shadow-lg hover:shadow-xl transition-all duration-300 flex items-center gap-2 mt-4 md:mt-0">
                            <i class="fas fa-plus"></i> Add New Product
                        </a>
                    </div>
                </div>

                <!-- Search Section -->
                <div class="bg-dark/70 backdrop-blur-sm rounded-2xl p-6 mb-8 shadow-[0_10px_30px_-15px_rgba(109,40,217,0.3)] border border-gray-800">
                    <div class="flex flex-col md:flex-row gap-4">
                        <form action="/admin/products" method="get" class="flex-1 relative">
                            <div class="relative">
                                <input type="text" id="search" name="search" placeholder="Search products by name..." 
                                    class="w-full pl-12 pr-4 py-4 rounded-xl bg-gray-800/60 border border-gray-700 focus:border-secondary focus:ring-2 focus:ring-secondary/20 text-white placeholder-gray-400 transition-all duration-300">
                                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                    <i class="fas fa-search text-gray-500 opacity-80"></i>
                                </div>
                            </div>
                        </form>
                        <form action="/admin/products" class="flex items-center">
                            <button type="submit"
                                class="relative overflow-hidden px-6 py-4 rounded-xl font-medium transition-all duration-300 bg-gray-800/80 hover:bg-gray-700 text-white">
                                <span class="relative flex items-center gap-2">
                                    <i class="fas fa-sync-alt"></i> Reset Filters
                                </span>
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Products Table Section -->
                <div class="bg-dark/70 backdrop-blur-sm rounded-2xl overflow-hidden border border-gray-800 shadow-[0_10px_30px_-15px_rgba(109,40,217,0.3)] mb-8">
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="bg-gradient-to-r from-gray-800/80 to-gray-900/80">
                                <tr class="text-left">
                                    <th class="py-5 px-6 text-gray-300 font-semibold uppercase text-xs tracking-wider">Product</th>
                                    <th class="py-5 px-6 text-gray-300 font-semibold uppercase text-xs tracking-wider">Image</th>
                                    <th class="py-5 px-6 text-gray-300 font-semibold uppercase text-xs tracking-wider">Category</th>
                                    <th class="py-5 px-6 text-gray-300 font-semibold uppercase text-xs tracking-wider">Price</th>
                                    <th class="py-5 px-6 text-gray-300 font-semibold uppercase text-xs tracking-wider">Offer</th>
                                    <th class="py-5 px-6 text-gray-300 font-semibold uppercase text-xs tracking-wider">Stock</th>
                                    <th class="py-5 px-6 text-gray-300 font-semibold uppercase text-xs tracking-wider">Status</th>
                                    <th class="py-5 px-6 text-gray-300 font-semibold uppercase text-xs tracking-wider">Updated</th>
                                    <th class="py-5 px-6 text-gray-300 font-semibold uppercase text-xs tracking-wider text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-700/50">
                                <% products.forEach((product, index)=> { %>
                                <tr class="hover:bg-gray-800/40 transition-colors duration-200 group">
                                    <td class="py-5 px-6">
                                        <div class="font-medium text-white group-hover:text-secondary transition-colors">
                                            <%= product.productName %>
                                        </div>
                                    </td>
                                    <td class="py-5 px-6">
                                        <% if (product.productImage && product.productImage.length> 0) { %>
                                            <div class="relative w-16 h-16 rounded-lg overflow-hidden border border-gray-700 group-hover:border-secondary/50 transition-all shadow-md group-hover:shadow-secondary/20">
                                                <img src="<%= product.productImage[0] %>" alt="Product"
                                                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
                                            </div>
                                        <% } else { %>
                                            <div class="w-16 h-16 rounded-lg bg-gray-700 flex items-center justify-center">
                                                <i class="fas fa-image text-gray-500"></i>
                                            </div>
                                        <% } %>
                                    </td>
                                    <td class="py-5 px-6">
                                        <span class="px-3 py-1 rounded-full text-xs font-medium <%= 
                                            product.category === 'gents' ? 'bg-blue-900/40 text-blue-300 border border-blue-800' : 
                                            product.category === 'ladies' ? 'bg-pink-900/40 text-pink-300 border border-pink-800' : 
                                            'bg-purple-900/40 text-purple-300 border border-purple-800'
                                        %>">
                                            <%= product.category %>
                                        </span>
                                    </td>
                                    <td class="py-5 px-6">
                                        <div class="text-green-400 font-medium">â‚¹<%= product.salePrice.toFixed(2) %></div>
                                    </td>
                                    <td class="py-5 px-6">
                                        <% if (product.discount && product.discount> 0) { %>
                                            <span class="px-3 py-1 rounded-full text-xs font-medium bg-yellow-900/40 text-yellow-300 border border-yellow-800">
                                                <%= product.discount %>%
                                            </span>
                                        <% } else { %>
                                            <span class="text-gray-500">-</span>
                                        <% } %>
                                    </td>
                                    <td class="py-5 px-6">
                                        <span class="<%= product.quantity > 10 ? 'text-blue-400' : product.quantity > 0 ? 'text-yellow-400' : 'text-red-400' %> font-medium">
                                            <%= product.quantity %>
                                        </span>
                                    </td>
                                    <td class="py-5 px-6">
                                        <span class="status-badge inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium <%= product.isListed ? 'bg-green-900/50 text-green-300 border border-green-800' : 'bg-red-900/50 text-red-300 border border-red-800' %>">
                                            <% if(product.isListed) { %>
                                                <i class="fas fa-circle-check mr-1.5"></i> Listed
                                            <% } else { %>
                                                <i class="fas fa-circle-xmark mr-1.5"></i> Unlisted
                                            <% } %>
                                        </span>
                                    </td>
                                    <td class="py-5 px-6 text-gray-400 text-sm">
                                        <%= product.updatedAt ? new Date(product.updatedAt).toLocaleDateString("en-GB") : "N/A" %>
                                    </td>
                                    <td class="py-5 px-6">
                                        <div class="flex justify-center space-x-2">
                                            <a href="/admin/edit-product?id=<%= product._id %>"
                                                class="text-blue-400 hover:text-blue-300 transition-colors duration-200 p-2 rounded-full hover:bg-blue-900/30 group"
                                                title="Edit">
                                                <i class="fas fa-pencil-alt"></i>
                                            </a>

                                            <button
                                                onclick="toggleProductStatus('<%= product._id %>', <%= product.isListed %>)"
                                                class="<%= product.isListed ? 'text-yellow-400 hover:text-yellow-300 hover:bg-yellow-900/30' : 'text-green-400 hover:text-green-300 hover:bg-green-900/30' %> p-2 rounded-full transition-colors duration-200"
                                                title="<%= product.isListed ? 'Unlist' : 'List' %>">
                                                <% if(product.isListed) { %>
                                                    <i class="fas fa-eye-slash"></i>
                                                <% } else { %>
                                                    <i class="fas fa-eye"></i>
                                                <% } %>
                                            </button>

                                            <button onclick="openDeleteModal('<%= product._id %>')"
                                                class="text-red-400 hover:text-red-300 transition-colors duration-200 p-2 rounded-full hover:bg-red-900/30"
                                                title="Delete">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Delete Modal -->
                <div id="deleteModal"
                    class="fixed inset-0 bg-black/80 backdrop-blur-sm hidden flex justify-center items-center z-50 px-4">
                    <div class="bg-gray-800 rounded-2xl shadow-2xl max-w-md w-full p-8 transform transition-all duration-300 scale-95 opacity-0 border border-gray-700"
                        id="modalContent">
                        <div class="flex justify-between items-center mb-6">
                            <h3 class="text-xl font-bold text-white">Confirm Deletion</h3>
                            <button onclick="closeDeleteModal()" class="text-gray-400 hover:text-white p-1">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                        <div class="mb-8">
                            <div class="w-16 h-16 bg-red-900/30 rounded-full mx-auto flex items-center justify-center mb-6">
                                <i class="fas fa-exclamation-triangle text-3xl text-red-400"></i>
                            </div>
                            <p class="text-gray-300 text-center">Are you sure you want to delete this product? This action
                                cannot be undone.</p>
                        </div>
                        <div class="flex justify-end space-x-4">
                            <button onclick="closeDeleteModal()"
                                class="px-5 py-3 rounded-xl bg-gray-700 hover:bg-gray-600 text-white transition-colors duration-200">
                                Cancel
                            </button>
                            <form id="deleteForm" method="post">
                                <button type="submit"
                                    class="relative overflow-hidden px-5 py-3 rounded-xl font-medium">
                                    <span class="absolute inset-0 w-full h-full bg-gradient-to-r from-red-600 to-red-500 rounded-xl"></span>
                                    <span class="absolute inset-0 w-full h-full transition-all duration-300 bg-gradient-to-r from-red-500 to-red-600 opacity-0 hover:opacity-100 rounded-xl"></span>
                                    <span class="relative z-10 flex items-center gap-2">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </span>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Pagination -->
                <div class="flex justify-center mt-10">
                    <div class="relative">
                        <div class="absolute -inset-4 bg-gradient-to-r from-secondary/20 to-primary/20 rounded-xl blur-md opacity-40"></div>
                        <div class="relative flex items-center gap-2 bg-gray-800/50 px-4 py-3 rounded-xl">
                            <% for(let i=1; i <=totalPages; i++) { %>
                                <a href="?page=<%= i %>"
                                    class="group relative w-10 h-10 flex items-center justify-center overflow-hidden rounded-lg">
                                    <span class="absolute inset-0 w-full h-full transition-all duration-300 <%= i === currentPage ? 'bg-gradient-to-r from-secondary to-primary' : 'bg-gray-700' %> rounded-lg"></span>
                                    <span class="absolute inset-0 w-full h-full transition-all duration-300 bg-gradient-to-r from-secondary to-primary opacity-0 group-hover:opacity-100 rounded-lg"></span>
                                    <span class="relative z-10 <%= i === currentPage ? 'text-white font-bold' : 'text-gray-300' %> group-hover:text-white"><%= i %></span>
                                </a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        async function toggleProductStatus(productId, currentStatus) {
            try {
                const response = await fetch('/admin/toggle-product-status', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        productId: productId,
                        isListed: currentStatus
                    })
                });

                const result = await response.json();

                if (result.success) {
                    const button = document.querySelector(`button[onclick*="toggleProductStatus('${productId}',"]`);
                    if (!button) {
                        console.error('Could not find toggle button for product:', productId);
                        window.location.reload();
                        return;
                    }

                    const row = button.closest('tr');
                    const statusBadge = row.querySelector('.status-badge');
                    const buttonIcon = button.querySelector('i');

                    if (result.isListed) {
                        statusBadge.innerHTML = '<i class="fas fa-circle-check mr-1.5"></i> Listed';
                        statusBadge.className = 'status-badge inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium bg-green-900/50 text-green-300 border border-green-800';
                        buttonIcon.className = 'fas fa-eye-slash';
                        button.title = 'Unlist';
                    } else {
                        statusBadge.innerHTML = '<i class="fas fa-circle-xmark mr-1.5"></i> Unlisted';
                        statusBadge.className = 'status-badge inline-flex items-center px-3 py-1.5 rounded-full text-xs font-medium bg-red-900/50 text-red-300 border border-red-800';
                        buttonIcon.className = 'fas fa-eye';
                        button.title = 'List';
                    }
                } else {
                    alert(result.message || 'Failed to update status');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
                window.location.reload();
            }
        }
        function openDeleteModal(productId) {
            const modal = document.getElementById('deleteModal');
            const modalContent = document.getElementById('modalContent');
            const deleteForm = document.getElementById('deleteForm');

            deleteForm.action = `/admin/delete-product?id=${productId}`;
            modal.classList.remove('hidden');

            setTimeout(() => {
                modalContent.classList.remove('scale-95', 'opacity-0');
                modalContent.classList.add('scale-100', 'opacity-100');
            }, 10);
        }

        function closeDeleteModal() {
            const modal = document.getElementById('deleteModal');
            const modalContent = document.getElementById('modalContent');

            modalContent.classList.remove('scale-100', 'opacity-100');
            modalContent.classList.add('scale-95', 'opacity-0');

            setTimeout(() => {
                modal.classList.add('hidden');
            }, 200);
        }

        function filterProducts() {
            let input = document.getElementById("search").value.toLowerCase();
            let rows = document.querySelectorAll("tbody tr");

            rows.forEach(row => {
                let productName = row.querySelector("td:first-child").textContent.toLowerCase();
                if (productName.includes(input)) {
                    row.style.display = "table-row";
                } else {
                    row.style.display = "none";
                }
            });
        }

        const menuBtn = document.getElementById('menu-btn');
        const sidebar = document.getElementById('sidebar');

        menuBtn.addEventListener('click', () => {
            sidebar.classList.toggle('-translate-x-full');
        });

        document.addEventListener('DOMContentLoaded', function () {
            const buttons = document.querySelectorAll('[title]');
            buttons.forEach(button => {
                button.addEventListener('mouseenter', function () {
                });
            });
        });
    </script>
</body>

</html>