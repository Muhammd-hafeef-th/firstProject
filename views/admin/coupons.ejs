                                                    <div class="flex justify-between items-center mb-3">
                                                        <h3 class="text-sm font-semibold text-white flex items-center gap-2">
                                                            <i class="fas fa-users text-green-500"></i>
                                                            Users (<%= coupon.userId ? coupon.userId.length : 0 %>)
                                                        </h3>
                                                        <button onclick="exportUserData('<%= coupon._id %>', '<%= coupon.name %>')"
                                                            class="text-purple-500 hover:text-purple-600 text-sm font-medium flex items-center gap-1">
                                                            <i class="fas fa-download"></i>
                                                            Export
                                                        </button>
                                                    </div>
                                                    <% if (coupon.userId && coupon.userId.length > 0) { %>
                                                        <div class="overflow-y-auto max-h-40 pr-2">
                                                            <div class="space-y-2">
                                                                <% coupon.userId.slice(0, 5).forEach(function(user) { %>
                                                                    <div class="flex items-center gap-3 p-2 hover:bg-gray-700 rounded">
                                                                        <div class="flex-shrink-0 h-8 w-8 rounded-full bg-green-500/20 flex items-center justify-center text-green-500">
                                                                            <%= user.firstname.charAt(0).toUpperCase() %><%= user.lastname ? user.lastname.charAt(0).toUpperCase() : '' %>
                                                                        </div>
                                                                        <div class="min-w-0">
                                                                            <p class="text-sm font-medium text-white truncate">
                                                                                <%= user.firstname %> <%= user.lastname || '' %>
                                                                            </p>
                                                                            <p class="text-xs text-gray-400 truncate">
                                                                                <%= user.email %>
                                                                            </p>
                                                                        </div>
                                                                    </div>
                                                                <% }); %>
                                                                <% if (coupon.userId.length > 5) { %>
                                                                    <div class="text-center text-xs text-gray-400 mt-2">
                                                                        +<%= coupon.userId.length - 5 %> more users
                                                                    </div>
                                                                <% } %>
                                                            </div>
                                                        </div>
                                                    <% } else { %>
                                                        <div class="text-center py-4">
                                                            <i class="fas fa-user-slash text-gray-400 text-2xl mb-2"></i>
                                                            <p class="text-sm text-gray-400">No users have used this coupon yet</p>
                                                        </div>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
