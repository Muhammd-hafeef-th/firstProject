    <script>
        var addModal = document.getElementById('addCouponModal');
        var openAddModalBtn = document.getElementById('openAddModal');
        var openAddModalEmptyBtn = document.getElementById('openAddModalEmpty');
        var closeAddModalBtn = document.getElementById('closeAddModal');
        var cancelButton = document.getElementById('cancelButton');
        var couponForm = document.getElementById('couponForm');
        var modalTitle = document.getElementById('modalTitle');
        var modalSubtitle = document.getElementById('modalSubtitle');
        var submitButtonText = document.getElementById('submitButtonText');
        var discountIcon = document.getElementById('discountIcon');

        var expireOnInput = document.getElementById('expireOn');
        var offerPriceInput = document.getElementById('offerPrice');
        var minimumPriceInput = document.getElementById('minimumPrice');
        var discountTypeInput = document.getElementById('discountType');
        var nameInput = document.getElementById('name');
        var nameHelpText = document.getElementById('nameHelpText');

        var today = new Date();
        var formattedDate = today.toISOString().split('T')[0];
        expireOnInput.min = formattedDate;

        function updateDiscountIcon() {
            if (discountTypeInput.value === 'percentage') {
                discountIcon.className = 'fas fa-percent text-gray-400';
            } else {
                discountIcon.className = 'fas fa-indian-rupee-sign text-gray-400';
            }
        }

        function updateOfferPriceLabel() {
            var discountType = discountTypeInput.value;
            var offerPriceNote = document.getElementById('offerPriceNote');

            if (discountType === 'percentage') {
                offerPriceNote.textContent = 'Percentage discount must be between 1 and 100';
                offerPriceInput.max = 100;
            } else {
                offerPriceNote.textContent = 'Discount amount must be less than minimum purchase amount';
                offerPriceInput.removeAttribute('max');
            }
            updateDiscountIcon();
        }

        var validatePrices = function () {
            var offerPrice = Number(offerPriceInput.value);
            var minimumPrice = Number(minimumPriceInput.value);
            var discountType = discountTypeInput.value;

            if (discountType === 'percentage') {
                if (offerPrice <= 0 || offerPrice > 100) {
                    offerPriceInput.setCustomValidity('Percentage discount must be between 1 and 100');
                    return false;
                } else {
                    offerPriceInput.setCustomValidity('');
                    return true;
                }
            } else {
                if (offerPrice && minimumPrice && offerPrice >= minimumPrice) {
                    offerPriceInput.setCustomValidity('Discount amount must be less than minimum purchase amount');
                    return false;
                } else {
                    offerPriceInput.setCustomValidity('');
                    return true;
                }
            }
        };

        offerPriceInput.addEventListener('input', validatePrices);
        minimumPriceInput.addEventListener('input', validatePrices);
        discountTypeInput.addEventListener('change', function () {
            validatePrices();
            updateOfferPriceLabel();
        });

        function initModal() {
            updateOfferPriceLabel();
        }

        function openAddModal() {
            modalTitle.textContent = 'Add New Coupon';
            modalSubtitle.textContent = 'Create a discount coupon for your customers';
            submitButtonText.textContent = 'Save Coupon';
            couponForm.reset();
            couponForm.action = '/admin/add-coupon';
            document.getElementById('couponId').value = '';
            nameInput.readOnly = false;
            nameHelpText.textContent = 'Code should be uppercase without spaces (e.g., SUMMER25)';
            nameHelpText.classList.remove('hidden');
            addModal.classList.remove('hidden');
            initModal();
        }

        if (openAddModalEmptyBtn) {
            openAddModalEmptyBtn.addEventListener('click', openAddModal);
        }

        openAddModalBtn.addEventListener('click', openAddModal);

        function closeModal() {
            addModal.classList.add('hidden');
        }

        closeAddModalBtn.addEventListener('click', closeModal);
        cancelButton.addEventListener('click', closeModal);

        addModal.addEventListener('click', function (e) {
            if (e.target === addModal) {
                closeModal();
            }
        });

        function editCoupon(couponId) {
            modalTitle.textContent = 'Edit Coupon';
            modalSubtitle.textContent = 'Update coupon details';
            submitButtonText.textContent = 'Update Coupon';
            couponForm.action = '/admin/edit-coupon';
            document.getElementById('couponId').value = couponId;

            fetch('/admin/get-coupon/' + couponId)
                .then(function (response) { return response.json(); })
                .then(function (coupon) {
                    nameHelpText.textContent = 'Coupon name cannot be changed after creation';
                    nameHelpText.classList.remove('hidden');
                    nameInput.value = coupon.name;
                    nameInput.readOnly = true;
                    document.getElementById('description').value = coupon.description || '';
                    document.getElementById('offerPrice').value = coupon.offerPrice;
                    document.getElementById('minimumPrice').value = coupon.minimumPrice;
                    document.getElementById('discountType').value = coupon.discountType || 'amount';
                    document.getElementById('usageLimit').value = coupon.usageLimit || 0;
                    document.getElementById('expireOn').value = new Date(coupon.expireOn).toISOString().split('T')[0];
                    updateOfferPriceLabel();
                    addModal.classList.remove('hidden');
                    initModal();
                })
                .catch(function (error) {
                    console.error('Error fetching coupon details:', error);
                    swal("Error", "Failed to fetch coupon details", "error");
                });
        }

        // Toast notification mixin
        const Toast = Swal.mixin({
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 3000,
            timerProgressBar: true,
            didOpen: (toast) => {
                toast.addEventListener('mouseenter', Swal.stopTimer)
                toast.addEventListener('mouseleave', Swal.resumeTimer)
            }
        });
        
        function toggleCouponStatus(couponId, currentStatus) {
            var action = currentStatus ? 'disable' : 'enable';
            var actionTitle = action.charAt(0).toUpperCase() + action.slice(1);

            Swal.fire({
                title: actionTitle + " this coupon?",
                text: currentStatus ? "Users won't be able to use this coupon anymore." : "This will make the coupon available to users.",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: actionTitle,
                cancelButtonText: "Cancel",
                confirmButtonColor: currentStatus ? '#ef4444' : '#22c55e',
                cancelButtonColor: '#374151',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    // Show loading toast
                    Toast.fire({
                        icon: 'info',
                        title: 'Processing...',
                        timer: 1000,
                        showConfirmButton: false
                    });
                    
                    fetch('/admin/toggle-coupon/' + couponId, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ status: !currentStatus })
                    })
                    .then(function (response) { return response.json(); })
                    .then(function (data) {
                        if (data.success) {
                            // Show success toast
                            Toast.fire({
                                icon: 'success',
                                title: "Coupon " + action + "d successfully"
                            });
                            
                            // Reload the page after a short delay
                            setTimeout(() => {
                                window.location.reload();
                            }, 1000);
                        } else {
                            // Show error toast
                            Toast.fire({
                                icon: 'error',
                                title: data.message || "Something went wrong"
                            });
                        }
                    })
                    .catch(function (error) {
                        console.error('Error toggling coupon status:', error);
                        
                        // Show error toast
                        Toast.fire({
                            icon: 'error',
                            title: "Failed to update coupon status"
                        });
                    });
                }
            });
        }

        couponForm.addEventListener('submit', function (event) {
            event.preventDefault();

            var couponName = nameInput.value;
            if (couponName !== couponName.toUpperCase() || couponName.includes(' ')) {
                const Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 3000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                        toast.addEventListener('mouseenter', Swal.stopTimer)
                        toast.addEventListener('mouseleave', Swal.resumeTimer)
                    }
                });
                
                Toast.fire({
                    icon: 'warning',
                    title: 'Coupon code must be uppercase and contain no spaces'
                });
                return;
            }

            var offerPrice = Number(offerPriceInput.value);
            var minimumPrice = Number(minimumPriceInput.value);
            var discountType = discountTypeInput.value;

            if (discountType === 'percentage') {
                if (offerPrice <= 0 || offerPrice > 100) {
                    Toast.fire({
                        icon: 'warning',
                        title: 'Percentage discount must be between 1 and 100'
                    });
                    return;
                }
            } else {
                if (offerPrice >= minimumPrice) {
                    Toast.fire({
                        icon: 'warning',
                        title: 'Discount amount must be less than minimum purchase amount'
                    });
                    return;
                }
            }

            var formAction = couponForm.action;
            var isEdit = formAction.includes('edit-coupon');

            var formData = {
                name: couponName,
                description: document.getElementById('description').value,
                offerPrice: offerPrice,
                minimumPrice: minimumPrice,
                discountType: discountType,
                usageLimit: Number(document.getElementById('usageLimit').value) || 0,
                expireOn: document.getElementById('expireOn').value
            };

            if (isEdit) {
                formData.couponId = document.getElementById('couponId').value;
            }

            var submitButton = document.getElementById('submitButton');
            var originalButtonHTML = submitButton.innerHTML;
            submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> ' + (isEdit ? 'Updating...' : 'Creating...');
            submitButton.disabled = true;

            fetch(formAction, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData)
            })
                .then(function (response) { return response.json(); })
                .then(function (data) {
                    submitButton.innerHTML = originalButtonHTML;
                    submitButton.disabled = false;
                    
                    // Close the modal first
                    closeModal();
                    
                    if (data.success) {
                        Toast.fire({
                            icon: 'success',
                            title: isEdit ? 'Coupon updated successfully' : 'Coupon created successfully'
                        }).then(function () {
                            window.location.reload();
                        });
                    } else {
                        Toast.fire({
                            icon: 'error',
                            title: data.message || 'Something went wrong'
                        });
                    }
                })
                .catch(function (error) {
                    submitButton.innerHTML = originalButtonHTML;
                    submitButton.disabled = false;
                    console.error('Error submitting coupon form:', error);
                    
                    // Close the modal even on error
                    closeModal();
                    
                    Toast.fire({
                        icon: 'error',
                        title: 'Failed to ' + (isEdit ? 'update' : 'create') + ' coupon'
                    });
                });
        });

        function toggleDetails(couponId) {
            var detailsRow = document.getElementById('details-' + couponId);
            var mobileDetailsToggle = document.getElementById('mobile-details-' + couponId);
            var toggleButton = document.querySelector(`.details-toggle[data-coupon="${couponId}"] i`);
            
            if (detailsRow) {
                detailsRow.classList.toggle('hidden');
            }
            if (mobileDetailsToggle) {
                mobileDetailsToggle.checked = !mobileDetailsToggle.checked;
            }
            if (toggleButton) {
                toggleButton.classList.toggle('down');
            }
        }

        function exportUserData(couponId, couponName) {
            swal({
                title: "Export User Data?",
                text: "This will download a CSV file with all users who used this coupon.",
                icon: "info",
                buttons: {
                    cancel: {
                        text: "Cancel",
                        value: null,
                        visible: true,
                        className: "bg-gray-700 hover:bg-gray-600 text-white font-medium py-2 px-4 rounded-lg",
                        closeModal: true,
                    },
                    confirm: {
                        text: "Export",
                        value: true,
                        visible: true,
                        className: "bg-green-500 hover:bg-green-600 text-white font-medium py-2 px-4 rounded-lg",
                        closeModal: true
                    }
                }
            }).then((confirm) => {
                if (confirm) {
                    window.location.href = `/admin/export-coupon-users/${couponId}?name=${encodeURIComponent(couponName)}`;
                }
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            var today = new Date();
            var nextWeek = new Date();
            nextWeek.setDate(today.getDate() + 7);
            document.getElementById('expireOn').valueAsDate = nextWeek;
        });
    </script>
