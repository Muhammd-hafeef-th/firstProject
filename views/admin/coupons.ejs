                                                <%= isActive ? 'bg-green-500/20 text-green-500' : 'bg-red-500/20 text-red-500' %>">
                                                <%= isActive ? 'Active' : 'Inactive' %>
                                                <% if (usageLimitReached) { %>
                                                    <i class="fas fa-exclamation-circle ml-1"></i>
                                                <% } %>
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                            <div class="flex justify-end items-center gap-2">
                                                <button onclick="editCoupon('<%= coupon._id %>')" 
                                                    class="text-green-500 hover:text-green-600 p-2 rounded-full hover:bg-green-500/20 transition"
                                                    title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button onclick="toggleCouponStatus('<%= coupon._id %>', <%= coupon.isList %>)"
