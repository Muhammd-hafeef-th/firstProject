<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details - LB</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        * {
            box-sizing: border-box; 
        }
        .status-badge {
            transition: all 0.3s ease;
        }
        .order-item {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        .order-item:hover {
            transform: translateY(-2px);
        }
        .info-card {
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .info-card:hover {
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
        .select-style {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%239ca3af' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
            background-position: right 0.5rem center;
            background-repeat: no-repeat;
            background-size: 1.5em 1.5em;
            appearance: none;
        }
    </style>
</head>

<body class="bg-gray-900 text-gray-100 min-h-screen">
    <%- include('../../views/partials/admin/navbar') %>

    <div class="flex h-screen pt-16">
        <%- include('../../views/partials/admin/sidebar') %>

        <div class="flex-1 ml-0 md:ml-64 p-4 sm:p-6 max-w-7xl mx-auto w-full overflow-x-hidden">
            <div class="flex justify-between items-center mb-6">
                <div>
                    <h1 class="text-xl sm:text-2xl font-bold text-white">Order Details</h1>
                    <p class="text-gray-400 mt-1 text-sm sm:text-base">Order ID: #<%= order.orderId %></p>
                </div>
                <div class="flex items-center gap-2">
                    <span class="text-gray-400 text-sm sm:text-base">Order Date:</span>
                    <span class="font-medium text-sm sm:text-base"><%= new Date(order.createdOn).toLocaleDateString('en-GB') %></span>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
                <!-- Order Info Card -->
                <div class="bg-gray-800 p-4 sm:p-6 rounded-xl info-card">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-lg sm:text-xl font-semibold flex items-center gap-2">
                            <i class="fas fa-receipt text-blue-400"></i>
                            Order Summary
                        </h2>
                        <div class="flex items-center gap-2">
                            <% const statusColors = { 
                                'Pending': 'bg-yellow-500/20 text-yellow-400',
                                'Processing': 'bg-blue-500/20 text-blue-400',
                                'Shipped': 'bg-indigo-500/20 text-indigo-400',
                                'Delivered': 'bg-green-500/20 text-green-400',
                                'Cancelled': 'bg-red-500/20 text-red-400',
                                'Return Rejected': 'bg-red-500/20 text-red-400',
                                'Return Request': 'bg-orange-500/20 text-orange-400',
                                'Returned': 'bg-purple-500/20 text-purple-400'
                            }; 
                            const currentStatusClass = statusColors[order.status] || 'bg-gray-500/20 text-gray-400'; %>
                            <span class="status-badge inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= currentStatusClass %>">
                                <%= order.status %>
                            </span>
                        </div>
                    </div>

                    <div class="space-y-4">
                        <div class="flex justify-between">
                            <span class="text-gray-400 text-sm sm:text-base">Total Amount:</span>
                            <span class="font-medium text-sm sm:text-base">â‚¹<%= order.finalAmount.toFixed(2) %></span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-400 text-sm sm:text-base">Payment Method:</span>
                            <span class="font-medium text-sm sm:text-base">
                                <% if (order.paymentMethod.type === 'cod') { %>
                                    <i class="fas fa-money-bill-wave mr-1"></i> Cash on Delivery
                                <% } else if (order.paymentMethod.type === 'razorpay') { %>
                                    <i class="fas fa-credit-card mr-1"></i> Razorpay
                                <% } else if (order.paymentMethod.type === 'wallet') { %>
                                    <i class="fas fa-wallet mr-1"></i> Wallet
                                <% } else { %>
                                    <i class="fas fa-question-circle mr-1"></i> Unknown
                                <% } %>
                            </span>
                        </div>

                        <% if (order.status === "Cancelled") { %>
                            <div class="flex justify-between">
                                <span class="text-gray-400 text-sm sm:text-base">Cancel Reason:</span>
                                <span class="font-medium text-red-300 text-sm sm:text-base"><%= order.cancelReason %></span>
                            </div>
                        <% } %>

                        <% if (order.status === "Returned" || order.status === "Return Request" || order.status === 'Return Rejected') { %>
                            <div class="flex justify-between">
                                <span class="text-gray-400 text-sm sm:text-base">Return Reason:</span>
                                <span class="font-medium text-orange-300 text-sm sm:text-base"><%= order.returnReason %></span>
                            </div>
                        <% } %>

                        <% if (order.status !== "Cancelled" && order.status !== "Delivered" && 
                              order.status !== "Return Request" && order.status !== "Returned" && 
                              order.status !== 'Return Rejected') { %>
                            <form action="/admin/change-status?orderId=<%=order.orderId%>" method="post" class="mt-4">
                                <div class="flex items-center gap-3">
                                    <select name="status" class="select-style p-2 rounded-md bg-gray-700 text-gray-100 w-full border border-gray-600 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none text-sm sm:text-base">
                                        <option value="Pending" <%= order.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                        <option value="Processing" <%= order.status === 'Processing' ? 'selected' : '' %>>Processing</option>
                                        <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                                        <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                    </select>
                                    <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md transition duration-200 flex items-center gap-2 whitespace-nowrap text-sm sm:text-base">
                                        <i class="fas fa-save"></i> Update
                                    </button>
                                </div>
                            </form>
                        <% } %>
                    </div>
                </div>

                <!-- Shipping Address Card -->
                <div class="bg-gray-800 p-4 sm:p-6 rounded-xl info-card">
                    <h2 class="text-lg sm:text-xl font-semibold mb-4 flex items-center gap-2">
                        <i class="fas fa-truck text-green-400"></i>
                        Shipping Address
                    </h2>
                    <div class="space-y-3">
                        <div class="flex items-start">
                            <i class="fas fa-user mt-1 mr-3 text-gray-400 w-4"></i>
                            <div>
                                <p class="text-gray-400 text-sm">Name</p>
                                <p class="font-medium text-sm sm:text-base"><%= selectedAddress.name %></p>
                            </div>
                        </div>
                        <div class="flex items-start">
                            <i class="fas fa-map-marker-alt mt-1 mr-3 text-gray-400 w-4"></i>
                            <div>
                                <p class="text-gray-400 text-sm">Address</p>
                                <p class="font-medium text-sm sm:text-base">
                                    <%= selectedAddress.landMark %>, <%= selectedAddress.city %>, 
                                    <%= selectedAddress.state %> - <%= selectedAddress.pincode %>
                                </p>
                            </div>
                        </div>
                        <div class="flex items-start">
                            <i class="fas fa-phone-alt mt-1 mr-3 text-gray-400 w-4"></i>
                            <div>
                                <p class="text-gray-400 text-sm">Phone</p>
                                <p class="font-medium text-sm sm:text-base"><%= selectedAddress.phone %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <% if(order.status === 'Return Request') { %>
                <div class="bg-[#1F1F1F] rounded-xl p-4 sm:p-6 border border-gray-700 mb-6 info-card">
                    <div class="flex items-center gap-4 mb-4">
                        <div class="p-3 bg-rose-500/20 rounded-full">
                            <i class="fas fa-exclamation-triangle text-rose-400 text-xl"></i>
                        </div>
                        <div>
                            <h3 class="text-lg sm:text-xl font-semibold text-white">Return Request Received</h3>
                            <p class="text-gray-400 text-sm sm:text-base">Review the request and take appropriate action</p>
                        </div>
                    </div>

                    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mt-4">
                        <div class="bg-gray-800/50 p-4 rounded-lg border border-gray-700 flex-1">
                            <p class="text-gray-400 mb-2 text-sm sm:text-base">Return Reason:</p>
                            <p class="font-medium text-rose-300 text-sm sm:text-base"><%= order.returnReason %></p>
                        </div>
                        <div class="flex gap-3 w-full md:w-auto">
                            <button onclick="handleReturnAction('reject','<%= order.orderId %>')"
                                class="px-5 py-2.5 border border-gray-600 text-gray-300 hover:text-white rounded-lg hover:bg-gray-700 transition-colors duration-300 flex items-center gap-2 w-full md:w-auto justify-center text-sm sm:text-base">
                                <i class="fas fa-times"></i> Reject
                            </button>
                            <button onclick="handleReturnAction('accept','<%= order.orderId %>')"
                                class="px-5 py-2.5 bg-rose-600 hover:bg-rose-700 text-white rounded-lg transition-colors duration-300 flex items-center gap-2 w-full md:w-auto justify-center text-sm sm:text-base">
                                <i class="fas fa-check"></i> Accept
                            </button>
                        </div>
                    </div>
                </div>
            <% } %>

            <!-- Ordered Items Section -->
            <div class="bg-gray-800 p-4 sm:p-6 rounded-xl info-card">
                <h2 class="text-lg sm:text-xl font-semibold mb-6 flex items-center gap-2">
                    <i class="fas fa-shopping-basket text-purple-400"></i>
                    Ordered Items
                </h2>

                <div class="divide-y divide-gray-700">
                    <% order.orderItems.forEach(item => { %>
                        <div class="order-item py-4 flex items-start md:items-center gap-4">
                            <img src="<%= item.product.productImage[0] %>" alt="<%= item.name %>"
                                class="w-16 h-16 rounded-md object-cover border border-gray-700" />
                            <div class="flex-1">
                                <h3 class="font-medium text-white text-sm sm:text-base"><%= item.product.productName %></h3>
                                <div class="flex flex-wrap items-center gap-4 mt-1">
                                    <span class="text-gray-400 text-sm">Qty: <%= item.quantity %></span>
                                    <span class="text-green-400 font-medium text-sm sm:text-base">â‚¹<%= item.price %></span>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const menuBtn = document.getElementById('menu-btn');
            const sidebar = document.getElementById('sidebar');

            menuBtn.addEventListener('click', () => {
                sidebar.classList.toggle('-translate-x-full');
            });

            function handleResize() {
                if (window.innerWidth >= 768) {
                    sidebar.classList.remove('-translate-x-full');
                } else {
                    sidebar.classList.add('-translate-x-full');
                }
            }

            window.addEventListener('resize', handleResize);
            handleResize();
        });

        function handleReturnAction(action, orderId) {
            Swal.fire({
                title: `Are you sure you want to ${action} this return?`,
                text: `This action cannot be undone`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: action === 'accept' ? '#e53e3e' : '#3085d6',
                cancelButtonColor: '#6b7280',
                confirmButtonText: `Yes, ${action} it`,
                background: '#1F1F1F',
                color: '#FFFFFF',
                backdrop: 'rgba(0,0,0,0.8)'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/admin/return-action', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ action, orderId })
                    })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: 'Success!',
                                text: `Return ${action}ed successfully`,
                                icon: 'success',
                                background: '#1F1F1F',
                                color: '#FFFFFF',
                                confirmButtonColor: '#B76E79'
                            }).then(() => {
                                window.location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: 'Failed',
                                text: data.message || `Return ${action} failed`,
                                icon: 'error',
                                background: '#1F1F1F',
                                color: '#FFFFFF',
                                confirmButtonColor: '#B76E79'
                            });
                        }
                    })
                    .catch(err => {
                        console.error('Error:', err);
                        Swal.fire({
                            title: 'Error!',
                            text: 'An error occurred while processing your request',
                            icon: 'error',
                            background: '#1F1F1F',
                            color: '#FFFFFF',
                            confirmButtonColor: '#B76E79'
                        });
                    });
                }
            });
        }
    </script>
</body>

</html>